<!-- template: 暢留言 - 表單 -->

<%= render :partial => "/partials/breadcrumb" %>

<main class="main main-comments-list">

    <div class="list-toolbar-wrapper comments-toolbar-wrapper">
        <div class="main-container">
            <div class="list-toolbar comments-toolbar comments-form-toolbar">
                <div class="toolbar-part">
                    <h3>我要留言</h3>
                </div>
                <div class="toolbar-part comments-end">
                    <div class="dropdown">
                        <button class="btn btn-xxxl btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">修改密碼</a></li>
                            <li><a class="dropdown-item" href="#">登出</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="comments-wrapper comments-form-wrppper">
        <div class="main-container">
            
            <form>
                <div class="comments-form">
                    <div class="col-form">
                        <div class="form-group">
                            <label for="exampleInput1" class="form-label">
                                <span class="form-request">*</span> 暱稱
                            </label>
                            <input type="text" class="form-control" id="exampleInput1">
                        </div>
                    </div>
                    <div class="col-form">
                        <div class="form-group">
                            <label for="exampleInput2" class="form-label">聯絡信箱</label>
                            <input type="email" class="form-control" id="exampleInput2" value="username@email.com" disabled readonly>
                        </div>
                    </div>
                    <div class="col-form">
                        <div class="form-group">
                            <label for="exampleInput3" class="form-label">
                                <span class="form-request">*</span> 問題分類
                            </label>
                            <div>
                                <select class="form-select" aria-label="選擇分類">
                                    <option selected>請選擇</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-form">
                        <div class="form-group">
                            <label for="exampleInput2" class="form-label">
                                <span class="form-request">*</span> 留言是否公開
                            </label>
                            <div class="pt-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" />
                                    <label class="form-check-label" for="inlineRadio1">是</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" />
                                    <label class="form-check-label" for="inlineRadio2">否</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-form">
                        <div class="form-group">
                            <label for="exampleInput3" class="form-label">
                                <span class="form-request">*</span> 主題區塊
                            </label>
                            <div>
                                <select class="form-select" aria-label="選擇分類">
                                    <option selected>請選擇</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInput4" class="form-label">
                        <span class="form-request">*</span> 留言問題
                    </label>
                    <textarea class="form-control" id="exampleInput4" rows="6"></textarea>
                </div>
                <div class="comments-form">
                    <div class="col-form">
                        <div class="form-group">
                            <label for="formFile" class="form-label">附加檔案</label>
                            <input class="form-control" type="file" id="formFile">
                            <div id="emailHelp" class="form-text">如果有說明文字的話，例如檔案類型</div>
                        </div>
                    </div>
                </div>
                <div class="comments-form">
                    <div class="form-group">
                        <label for="InputCAPTCHA" class="form-label">
                            <span class="form-request">*</span> 驗證碼
                        </label>
                        <div class="d-flex">
                            <input type="text" class="form-control" id="InputCAPTCHA">
                            <span class="captcha-img"><img id="u13318_img" class="img " src="https://dxlfb468n8ekd.cloudfront.net/gsc/6MXA2D/52/90/86/529086bfd0e948d0ab6c495b85af4420/images/註冊帳密/u11616.png?token=9f16c4c9739ed8d8a57ea2b98336bc59"></span>
                            <button type="button" class="btn btn-lg btn-secondary"><i class="fas fa-redo-alt"></i></button>
                        </div>
                    </div>
                </div>
                
                <div class="comments-action">
                    <button type="submit" class="btn btn-xxxl btn-main">送出留言</button>
                    <button type="button" class="btn btn-xxxl btn-link">取消</button>
                </div>
            </form>
            
        </div>
    </div>

</main>

<% content_for :js do %>


<% end %>

