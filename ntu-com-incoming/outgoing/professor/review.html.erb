<!-- template: 出國: 教授 - 線上審查 & 主管線上審查 -->

<div class="workspace" canvas="container">
    <div class="pages general-pages">
        
        <header class="header header-outgoing" id="pagetop">
            <div class="container-lg">
                <div class="header-wrap">
                    <div class="header-function">
                        <div class="header-right">
                            <div class="account">
                                您好, 湯姆克魯斯
                            </div>
                        </div>
                    </div>
                    <div class="brands">
                        <div class="brands-link">
                            <div class="logo">
                                <h1 class="text-hide">College of Management ,National Taiwan University</h1>
                                <img class="h1-logo" src="../../assets/logo@2x.svg">
                            </div>
                            <div class="sub">
                                <span>國立臺灣大學 管理學院</span>
                                <span>出國交換甄選系統</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sys-subject">
                <div class="container-lg">
                    <h4>113 學年度 第 1 學期</h4>
                </div>
            </div>
        </header>
        
        <div class="content">
            <div class="container-lg">
                
                <div class="review-online-wrapper">
                    
                    <div class="review-online-list">
                        <div class="list-head">
                            <h5>待審查名單</h5>
                            <select class="form-select" aria-label="Default select example">
                                <option value="1">全部</option>
                                <option value="2">已審查</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="list-bd">
                            <div class="scrollbar-inner">
                                <ul class="menu-item">

                                    <li><button type="button" class="btn">B06703009 <%= zh_lorem_name %></button></li>
                                    <li class="current"><button type="button" class="btn">B06703010 <%= zh_lorem_name %></button></li>

                                    <% (11..51).map do |i| %>
                                    <li><button type="button" class="btn">B067030<%= i %> <%= zh_lorem_name %></button></li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="review-online-info">
                        <div class="page-title mb-4">
                            <h3>審查結果登錄</h3>
                        </div>
                        
                        <div class="accordion review-card" id="accordionExample">
                            <div class="accordion-item">
                                <div class="card-hd">
                                    <div class="hd-start">
                                        <div class="me-3">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"></button>
                                        </div>
                                        <div class="main-id">B06703045 王大帥</div>
                                        <div class="start-pieces">
                                            <span>系所</span>
                                            <span class="badge text-bg-light">醫學檢驗暨生物技術學系</span>
                                        </div>
                                        <div class="start-pieces">
                                            <span>年級</span>
                                            <span class="badge text-bg-light">3</span>
                                        </div>
                                        <div class="start-pieces">
                                            <span>學位別</span>
                                            <span class="badge text-bg-light">學士</span>
                                        </div>
                                    </div>
                                    <div class="hd-end">
                                        <button type="button" class="btn btn-sm btn-outline-primary btn-rounded" data-bs-toggle="modal" data-bs-target="#detailsModal">評分明細</button>
                                    </div>
                                </div>
                                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <div class="card-bd">
                                            <div class="row">
                                                <div class="col-3">
                                                    <div>
                                                        <label for="exampleFormControlInput1" class="form-label">學業綜合表現(30%)</label>
                                                        <input type="text" class="form-control" id="exampleFormControlInput1">
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div>
                                                        <label for="exampleFormControlInput2" class="form-label">國際化及語言能力(30%)</label>
                                                        <input type="text" class="form-control" id="exampleFormControlInput2">
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div>
                                                        <label for="exampleFormControlInput3" class="form-label">社會活動參與(40%)</label>
                                                        <input type="text" class="form-control" id="exampleFormControlInput3">
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div>
                                                        <label for="exampleFormControlInput4" class="form-label">分數</label>
                                                        <input type="text" class="form-control" id="exampleFormControlInput4" disabled readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-text">每格分數限填 0 ~ 100 間 (小數點最多可至第 5 位)</div>
                                            <div class="mt-3"><button type="submit" class="btn btn-lg btn-primary">儲存</button></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="data-wrapper">
                            <div class="data-hd">
                                <div class="d-flex justify-content-center">
                                    <span><button type="button" class="btn btn-light">上一文件</button></span>
                                    <span class="mx-2">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </span>
                                    <span><button type="button" class="btn btn-light">下一文件</button></span>
                                </div>
                            </div>
                            <div class="data-bd">
                                <div class="scrollbar-inner">
                                    <div class="data-inner">
                                        <img src="../../assets/fake/s.jpg">
                                        <div><%= lorem_paragraphs(20) %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>

            </div>
        </div>
        <a id="backtop"></a>
    </div>
    <%= render :partial => "/partials/footer" %>
</div>


<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailsModalLabel">評分明細</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="review-card mb-0">
                    <div class="card-hd mb-0 pb-2">
                        <div class="hd-start">
                            <div class="main-id">U00X</div>
                            <div class="start-pieces">B06703045 王大帥</div>
                            <div class="start-pieces">
                                <span>系所</span>
                                <span class="badge text-bg-light">醫學檢驗暨生物技術學系</span>
                            </div>
                            <div class="start-pieces">
                                <span>年級</span>
                                <span class="badge text-bg-light">3</span>
                            </div>
                            <div class="start-pieces">
                                <span>學位別</span>
                                <span class="badge text-bg-light">學士</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <table class="table table-bordered text-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-start">老師</th>
                            <th>學業綜合表現(30%)</th>
                            <th>國際化及語言能力(30%)</th>
                            <th>社會活動參與(40%)</th>
                            <th>合計</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (1..6).map do |i| %>
                        <tr>
                            <th class="text-start"><%= zh_lorem_name %></th>
                            <td>99</td>
                            <td>99</td>
                            <td>99</td>
                            <td>99</td>
                        </tr>
                        <% end %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-start">平均</th>
                            <td>99</td>
                            <td>99</td>
                            <td>97.91666667</td>
                            <td>90.86667</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>


<% content_for :js do %>

<!-- sidenav scrollbar -->
<script src="../../javascripts/jquery.scrollbar.min.js"></script>
<script>
    jQuery(document).ready(function(){
        jQuery('.scrollbar-inner').scrollbar();
    });
</script>

<script>
$(document).ready(function() {
    setTimeout(function() {
        $('#collapseOne').collapse('show'); // 展開 .accordion-collapse
        setTimeout(function() {
            $('#collapseOne').collapse('hide'); // 再次收合 .accordion-collapse
        }, 1000); // 延遲 0.5 秒
    }, 1000); // 延遲 1 秒
});
</script>

<% end %>
