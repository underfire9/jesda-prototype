    <div class="pages general-pages">
        
        <%= render :partial => "/partials/header-incoming" %>
        
        <div class="content">
            <div class="container-lg">
                <div class="page-content has-sticky">

                    <%= render :partial => "/partials/incoming-result-sidebar" %>
                    
                    <main class="main">
                        
                        <div class="mb-5">
                            <div class="page-title">
                                <h3>Internet Access Fee</h3>
                            </div>
                            
                            <div class="alert alert-danger" role="alert">
                                Please upload the documents during 2022-07-01 00:00 ~ 2024-01-31 00:00 (Taiwan Time, GMT+8)
                            </div>

                            <div>
                                <h5>Billing Statement- Internet Access Fee</h5>
