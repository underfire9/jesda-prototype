							<div class="col-7">
                                <select class="browser-default custom-select">
                                    <option selected>請選擇</option>
                                    <option value="1">北123(990)</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
							</div>
						</div>
					</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-md btn-secondary" data-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-md btn-primary">儲存</button>
                </div>
            </div>
        </div>
    </div>

	
	<%= render :partial => "/partials/sc_flowpath" %>
