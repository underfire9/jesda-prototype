<!-- ntuoia: 文章專欄列表 -->

<%= render :partial => "/partials/breadcrumb" %>

<div class="container">
	<div class="pages-row">
	    <%= render :partial => "/partials/accordian_nav" %>
		<main class="main">
		    <div class="main-inner">
                <div class="title-wrap">
                    <h3 class="section-title">文章列表</h3>
                </div>
                <ul class="article-list menu-item">
                    <% (1..4).map do |i| %>
                    <li>
                        <a href="#" class="item-link">
                            <div class="img-wrap">
                                <img class="img" src="http://placekitten.com/293/165">
                            </div>
                            <h5><%= lorem_sentence %></h5>
                        </a>
						<span class="date">2022-12-10</span>
						<div class="post-meta">
						    <a class="meta-link" href="#"><%= lorem_words(3) %></a>
							<a class="meta-link" href="#"><%= lorem_words(4) %></a>
						</div>
                    </li>
					<li>
                        <a href="#" class="item-link">
                            <div class="img-wrap">
                                <img class="img" src="http://placekitten.com/586/330">
                            </div>
                            <h5><%= zh_lorem_sentence %></h5>
                        </a>
						<span class="date">2022-12-10</span>
						<div class="post-meta">
						    <a class="meta-link" href="#"><%= zh_lorem_words(6) %></a>
							<a class="meta-link" href="#"><%= zh_lorem_words(3) %></a>
						</div>
                    </li>
                    <% end %>
                </ul>

                <nav aria-label="Page navigation">
                    <ul class="pagination pg-amber justify-content-end">
                        <li class="page-item item-amount"><span>212 筆</span></li>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link">1</a></li>
                        <li class="page-item"><a class="page-link">2</a></li>
                        <li class="page-item"><a class="page-link">3</a></li>
                        <li class="page-item"><a class="page-link">4</a></li>
                        <li class="page-item"><a class="page-link">5</a></li>
                        <li class="page-item">
                            <a class="page-link" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link">Last</a></li>
                    </ul>
                </nav>
			</div>
		</main>
    </div>
</div>



<% content_for :js do %>

<% end %>
































