<!-- ntuoia: 年度列表 -->

<%= render :partial => "/partials/breadcrumb" %>

<div class="container">
	<div class="pages-row">
	    <%= render :partial => "/partials/accordian_nav" %>
		<main class="main">
		    <div class="main-inner">
                <div class="title-wrap">
                    <h3 class="section-title">
						臺灣大學歷屆來校交換學生心得 / 網誌
						<small>NTU Exchange Students' Reports / Blogs</small>
					</h3>
                </div>
				<div class="section-brief">
					Please click on the year to view, or <a href="#">Upload Exchange Reports 上傳心得</a>
				</div>
				<!-- 需要 hash -->
                <ul class="nav nav-tabs nav-justified md-tabs ntu-main" id="yearsTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="incoming-tab" data-toggle="tab" href="#incoming" role="tab" aria-controls="incoming" aria-selected="true">
							來校交換生心得/網誌
							<span class="en">Incoming Exchange Students' Reports / Blogs</span>
						</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="outgoing-tab" data-toggle="tab" href="#outgoing" role="tab" aria-controls="outgoing" aria-selected="false">
							出國交換學生心得/網誌
							<span class="en">Outgoing Exchange Students' Reports / Blogs</span>
						</a>
                    </li>
                </ul>
                <div class="tab-content" id="yearsTabContent">
                    <div class="tab-pane fade show active" id="incoming" role="tabpanel" aria-labelledby="incoming-tab">
                        <div class="annual-wrapper">
							<h4 class="tabs-title">Incoming Exchange Students' Reports / Blogs</h4>
						    <ul class="annual-list menu-item">
								<li>
								    <a href="#"><span>1995/1996</span></a>
								</li>
								<% (1..24).each do |n| %>
							    <li>
								    <a href="#"><span>2005/2006</span></a>
								</li>
								<% end %>
								<li>
								    <a href="#"><span>2020/2021</span></a>
								</li>
							</ul>
						</div>
                    </div>
                    <div class="tab-pane fade" id="outgoing" role="tabpanel" aria-labelledby="outgoing-tab">
                        <div class="annual-wrapper">
							<h4 class="tabs-title">Outgoing Exchange Students' Reports / Blogs</h4>
						    <ul class="annual-list menu-item">
								<li>
								    <a href="#"><span>1995/1996</span></a>
								</li>
								<% (1..24).each do |n| %>
							    <li>
								    <a href="#"><span>2005/2006</span></a>
								</li>
								<% end %>
								<li>
								    <a href="#"><span>2020/2021</span></a>
								</li>
							</ul>
						</div>
                    </div>
                </div>
			</div>
		</main>
    </div>
</div>



<% content_for :js do %>

<% end %>
































