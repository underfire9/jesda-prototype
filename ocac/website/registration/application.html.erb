<!-- event-page: 申請端 - 申請表 -->

<main class="main">
	<div class="container">
        <div class="registration-hd">
			<hgroup>
                <h3 class="main-title">2020 年僑務委員會海外商會幹部暨青商培訓班</h3>
                <h5 class="sub-title">2020 Overseas Chamber of Commerce Cadre and Youth Business Training Program</h5>
			</hgroup>
            <div class="account dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="UserName">
                    <span>UserName</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#" title="登出">登出</a>
                </div>
            </div>
        </div>
		<div class="registration-wrapper">
			<div class="registration-inner">
                <div class="registration-nav">
                    <ul class="menu-item">
                        <li class="registration-item current">
                            <h5>
                                <small>1</small>
                                <span>申請表</span>
                            </h5>
                            <span class="brief">填寫各項基本資料及申請志願</span>
                        </li>
                        <li class="registration-item">
                            <h5>
                                <small>2</small>
                                <span>上傳文件</span>
                            </h5>
                            <span class="brief">上傳各項申請所需文件</span>
                        </li>
                        <li class="registration-item">
                            <h5>
                                <small>3</small>
                                <span>確認資料</span>
                            </h5>
                            <span class="brief">確認步驟 1-3 各項資料及文件</span>
                        </li>
                        <li class="registration-item">
                            <h5>
                                <small>4</small>
                                <span>送出申請</span>
                            </h5>
                            <span class="brief">確認步驟完成送出申請資料</span>
                        </li>
                    </ul>
                </div>
                <div class="registration-content">
                    <h4 class="warpper-title">申請表</h4>
					<p>* 號為必填欄位，請確實填寫。</p>
					<div class="lastchild-wrap">
                        <div class="application-block">
                            <h5 class="block-hd">個人資訊</h5>
                            <div class="form-group">
                                <label><span class="required">*</span>英文姓名</label>
                                <div class="form-row">
                                    <div class="col-lg-6 col-12 mb-2">
                                        <input type="text" class="form-control" placeholder="first">
                                    </div>
                                    <div class="col-lg-6 col-12 mb-2">
                                        <input type="text" class="form-control" placeholder="last">
                                    </div>
                                </div>
                                <p class="form-info text-muted">same as shown on your passport</p>
                            </div>
                            <div class="form-group">
                                <label for="registerChinese"><span class="required">*</span>中文姓名</label>
                                <input type="text" class="form-control" id="registerChinese">
                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label><span class="required">*</span>性別</label>
                                        <div>
                                            <div class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" class="custom-control-input" id="registerMale" name="registerGender">
                                                <label class="custom-control-label" for="registerMale">男</label>
                                            </div>
                                            <div class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" class="custom-control-input" id="registerFemale" name="registerGender">
                                                <label class="custom-control-label" for="registerFemale">女</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label>國籍</label>
                                        <div>
                                            <select class="browser-default custom-select">
                                                <option>台灣</option>
                                                <option>其他</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="application-block">
                            <h5 class="block-hd">聯絡資訊</h5>
							
							<!-- 多一個 .narrow-phone-group 很重要務必記得放 -->
							
                            <div class="form-group narrow-phone-group">
                                <label><span class="required">*</span>電話</label>
                                <div class="form-inline">
                                    <span class="pr-2">+</span>
                                    <input type="text" class="form-control" placeholder="Country Code">
                                    <span class="px-2">-</span>
                                    <input type="text" class="form-control" placeholder="Area Code">
                                    <span class="px-2">-</span>
                                    <input type="text" class="form-control" placeholder="Number">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="basic40"><span class="required">*</span>信箱</label>
                                <input type="email" class="form-control" id="basic40">
                                <p class="form-info text-muted">Please use your main email address for notifications</p>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-4 col-12">
                                    <div class="form-group">
                                        <label for="basic41"><span class="required">*</span>郵遞區號</label>
                                        <input type="text" class="form-control" id="basic41">
                                    </div>
                                </div>
                                <div class="col-lg-8 col-12">
                                    <div class="form-group">
                                        <label for="basic41"><span class="required">*</span>郵寄地址</label>
                                        <input type="text" class="form-control" id="basic41">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="application-block">
                            <h5 class="block-hd">教育狀況</h5>
                            <div class="form-group">
                                <label for="registerChinese"><span class="required">*</span>教育程度</label>
                                <div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="basic41" name="academicStatus">
                                        <label class="custom-control-label" for="basic41">高中</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="basic42" name="academicStatus">
                                        <label class="custom-control-label" for="basic42">學士</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="basic43" name="academicStatus">
                                        <label class="custom-control-label" for="basic43">碩士</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="basic44" name="academicStatus">
                                        <label class="custom-control-label" for="basic44">博士</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="basic45" name="academicStatus">
                                        <label class="custom-control-label" for="basic45">其他</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="application-block">
                            <h5 class="block-hd">其他</h5>
                            <div class="form-group">
                                <label for="registerChinese">How did you hear about Plus Academy ?</label>
                                <div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic46">
                                        <label class="custom-control-label" for="basic46">OIA website (www.oia.ntu.edu.tw)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic47">
                                        <label class="custom-control-label" for="basic47">Staff at the international office of your home university</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic48">
                                        <label class="custom-control-label" for="basic48">Taiwan embassy in your home country</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic49">
                                        <label class="custom-control-label" for="basic49">Friend / Associate / Relative</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic50">
                                        <label class="custom-control-label" for="basic50">Previous participant of the program</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="basic51">
                                        <label class="custom-control-label" for="basic51">Other</label>
                                        <input type="text" class="form-control" placeholder="Please specify">
                                    </div>
                                </div>
                            </div>
                        </div>
					</div>
                </div>
			</div>
            <div class="form-action mt-0">
				<a href="#" class="btn btn-lg btn-default" title="儲存目前資料">儲存目前資料</a>
                <a href="#" class="btn btn-lg btn-primary" title="下一步">下一步</a>
            </div>
		</div>
    </div>
</main>



<% content_for :js do %>

<% end %>
