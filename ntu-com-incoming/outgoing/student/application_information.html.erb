<!-- template: 出國: 學生 - 學校申請資格一覽表 & 不足額學校名單 -->

<div class="workspace" canvas="container">
    <div class="pages general-pages">
        
        <header class="header header-outgoing" id="pagetop">
            <div class="container-lg">
                <div class="header-wrap">
                    <div class="header-function">
                        <div class="header-right">
                            <div class="language">
                                <a href="#">EN</a>
                            </div>
                        </div>
                    </div>
                    <div class="brands">
                        <div class="brands-link">
                            <div class="logo">
                                <h1 class="text-hide">College of Management ,National Taiwan University</h1>
                                <img class="h1-logo" src="../../assets/logo@2x.png">
                            </div>
                            <div class="sub">
                                <span>國立臺灣大學 管理學院</span>
                                <span>出國交換甄選系統</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sys-subject">
                <div class="container-lg">
                    <h4>113 學年度</h4>
                </div>
            </div>
        </header>
        
        <div class="content">
            <div class="container-lg">
                <div class="page-title">
                    <h3>學校申請資格一覽表</h3>
                </div>
                <div class="mb-4">
                    <div class="row">
                        <div class="col-4">
                            <select class="form-select" id="single-select-field" data-placeholder="請選擇國家">
                                <option></option>
                                <option>Reactive</option>
                                <option>Solution</option>
                                <option>Conglomeration</option>
                                <option>Algoritm</option>
                                <option>Holistic</option>
                            </select>
                        </div>
                        
                        <!-- select2 bootstrap theme 多筆 select 不會寫，煩請工程師協助 -->
                        <div class="col-6">
                            <select class="form-select" id="single-select-field" data-placeholder="請選擇學校">
                                <option></option>
                                <option>Reactive</option>
                                <option>Solution</option>
                                <option>Conglomeration</option>
                                <option>Algoritm</option>
                                <option>Holistic</option>
                            </select>
                        </div>
                        <div class="col-2">
                            <select class="form-select" aria-label="Default select example">
                                <option selected>全部學位別</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead>
                            <tr>
                                <th>國家</th>
                                <th>計畫名稱</th>
                                <th>甄選名額</th>
                                <th class="text-nowrap text-end">甄選資料</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% (1..8).map do |i| %>
                            <tr>
                                <td><%= lorem_sentence %></td>
                                <td><%= lorem_sentence %></td>
                                <td class="text-nowrap">
                                    <span class="d-inline-block">學士：6 學期數</span>
                                    <span class="d-inline-block ms-3">碩士：1 學期數</span>
                                </td>
                                <td class="text-nowrap text-end">
                                    <a href="#" class="btn btn-sm btn-outline-primary btn-rounded">甄選資料</a>
                                </td>
                            </tr>
                            <tr>
                                <td><%= lorem_sentence %></td>
                                <td><%= lorem_sentence %></td>
                                <td class="text-nowrap">
                                    <span class="d-inline-block">碩士：2 學期數</span>
                                </td>
                                <td class="text-nowrap text-end">
                                    <a href="#" class="btn btn-sm btn-outline-primary btn-rounded">甄選資料</a>
                                </td>
                            </tr>
                            <tr>
                                <td><%= lorem_sentence %></td>
                                <td><%= lorem_sentence %></td>
                                <td class="text-nowrap">
                                    <span class="d-inline-block">4學期數</span>
                                </td>
                                <td class="text-nowrap text-end">
                                    <a href="#" class="btn btn-sm btn-outline-primary btn-rounded">甄選資料</a>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="1" class="bg-secondary text-white fw-bold py-3">合計：25 國</th>
                                <td colspan="3" class="bg-secondary text-white fw-bold py-3">計畫數：79</td>
                            </tr>
                        </tfoot>
                    </table>

                </div>

            </div>
        </div>
        <a id="backtop"></a>
    </div>
    <%= render :partial => "/partials/footer" %>
</div>

<% content_for :js do %>

<!-- Select2 + bootstrap theme -->
<script src="../../javascripts/select2.full.min.js"></script>
<script type="text/javascript">
$( '#single-select-field' ).select2( {
    theme: "bootstrap-5",
    width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
    placeholder: $( this ).data( 'placeholder' ),
} );
</script>

<% end %>
