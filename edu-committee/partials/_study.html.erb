	<tbody>
		<% (1..5).each do |n| %>
	    <tr>
		    <td class="num"><%= n %></td>
			<td><input type="text" id="exampleForm2" class="form-control"></td>
			<td>
                <select class="js-example-basic-single" name="state">
                  <option value="NSYU">國立中山大學</option>
                  <option value="NCNU">國立中正大學</option>
                  <option value="NCCU">國立政治大學</option>
                </select>
			</td>
			<td><input type="text" id="" class="form-control"></td>
			<td><a href="#" class="btn-delete" title="刪除"><i class="fa fa-times"></i></a></td>
		</tr>
		<% end %>
	</tbody>
</table>


<a href="#" class="add-btn">
	<span class="add-inner">
        <span class="btn-rounded waves-effect waves-light"><i class="fa fa-plus"></i> </span>
