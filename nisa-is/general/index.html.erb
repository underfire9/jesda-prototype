<!-- NISA-IS: 首頁  -->

<div class="container">
	<div class="row">
	    <div class="col-xl-8">
			<!--圖片標準比例 16:9，最小尺寸 800x450，後台上傳處請務必註明-->
			<!--Carousel Wrapper-->
			<div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
				<!--Indicators-->
				<ol class="carousel-indicators">
					<li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
					<li data-target="#carousel-example-1z" data-slide-to="1"></li>
					<li data-target="#carousel-example-1z" data-slide-to="2"></li>
				</ol>
				<!--/.Indicators-->
				<!--Slides-->
				<div class="carousel-inner" role="listbox">
					<!--First slide-->
					<div class="carousel-item active">
						<img class="d-block w-100" src="../assets/fake/001.jpg" alt="First slide">
					</div>
					<!--/First slide-->
					<!--Second slide-->
					<div class="carousel-item">
						<img class="d-block w-100" src="../assets/fake/002.jpg" alt="Second slide">
					</div>
					<!--/Second slide-->
					<!--Third slide-->
					<div class="carousel-item">
						<img class="d-block w-100" src="../assets/fake/003.jpg" alt="Three slide">
					</div>
					<!--/Third slide-->
				</div>
				<!--/.Slides-->
				<!--Controls-->
				<a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
				<!--/.Controls-->
			</div>
			<!--/.Carousel Wrapper-->
			
		    <section class="section">
				<h4 class="block-title">Announcement</h4>
				<ul class="announcement-list menu-item">
					<% 3.times do %>
					<li>
						<p class="date">2018/10/22</p>
						<h5 class="title"><%= lorem_sentence %></h5>
						<p class="summary">
							<%= lorem_sentences(2) %>...
							<a href="/" class="more">readmore</a>
						</p>
					</li>
					<% end %>
				</ul>
			</section>
		</div>
		<div class="col-xl-4">
			<div class="main-link">
				<a href="/" class="main-btn btn-inquiry">
					<span class="icon"><img src="../assets/icon-pen-96.png"></span>
					<span class="character">Make an Inquiry</span>
				</a>
				<a href="/" class="main-btn btn-status">
					<span class="icon"><img src="../assets/icon-search-96.png"></span>
					<span class="character">Check Status</span>
				</a>
			</div>
		</div>
	</div>
</div>