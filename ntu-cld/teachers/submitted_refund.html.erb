<!-- ntu: 師資班 - 已送出: 退補件作業 -->

<div class="container-lg">
	<div class="page-content">
	    <aside class="aside offcanvas-collapse">
			<div class="scrollbar-inner">
				<div class="user-wrapper">
				    <p><i class="far fa-user-circle"></i></p>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Angela Winson
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Change password</a></li>
                            <li><a class="dropdown-item" href="#">Log out</a></li>
                        </ul>
                    </div>
				</div>
		        <div class="sidenav">
                    <ul class="navigation menu-item">
                        <li>
							<a class="nav-item" href="#">瀏覽申請紀錄</a>
						</li>
                        <li>
							<a class="nav-item current" href="#">退補件</a>
						</li>
						<li>
							<a class="nav-item" href="#">繳交學費</a>
						</li>
                    </ul>
				</div>
			</div>
		</aside>
		<div id="widget-overlay"></div>
		<main class="main">
			<h2 class="mb-4">退補件</h2>
		    <div class="notice-wrapper">
			    <h4 class="notice-title">注意事項</h4>
				<p><%= lorem_paragraph %></p>
				<ol>
					<% (1..3).map do |i| %>
				    <li><%= lorem_sentence %></li>
					<% end %>
				</ol>
			</div>
			<div class="preview-wrapper refund-wrapper">
                <section class="application-section">
                    <h4 class="section-title">
                        <span>文件上傳</span>
                    </h4>
                    <div class="upload-wrapper">
						
						<!-- 檔案上傳後多出 .file-pill，當再次上傳時則覆蓋上一筆，點選檔名另開視窗觀看文件 -->
                        <div class="upload-item">
                            <h4>照片大頭照</h4>
                            <p class="text-danger">管理者登錄之補件說明 <%= lorem_sentences(2) %></p>
                            <div class="form-group">
                                  <input class="form-control" type="file" id="photoFile">
                            </div>
                            <div class="upload-ft">
                                <div class="ft-left">
                                    <span>
                                        <button type="button" class="btn btn-primary">Upload</button>
                                    </span>
                                    <span>
                                        <div class="file-pill">
                                            <!-- 避免檔名過長有限制最大寬度 140px，超出時會字元會省略 -->
                                            <a href="#" target="_blank" class="filename">file_name.jpg</a>
                                            <button type="button" class="btn btn-sm btn-rounded btn-dark" title="移除">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </span>
                                </div>
                                <button type="button" class="btn btn-history btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#uploadHistory"><i class="fas fa-history"></i> 上傳紀錄</button>
                            </div>
                        </div>
                        <div class="upload-item">
                            <h4>身分證正面</h4>
                            <p class="text-danger"><%= lorem_sentences(2) %> 管理者登錄之補件說明</p>
                            <div class="form-group">
                                  <input class="form-control" type="file" id="passportFile">
                            </div>
                            <div class="upload-ft">
								<div class="ft-left">
                                    <button type="button" class="btn btn-primary">Upload</button>
								</div>
                                <button type="button" class="btn btn-history btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#uploadHistory"><i class="fas fa-history"></i> 上傳紀錄</button>
                            </div>
                        </div>
						<div class="upload-item">
                            <h4>畢業證書</h4>
                            <p class="text-danger"><%= lorem_sentences(2) %> 管理者登錄之補件說明</p>
                            <div class="form-group">
                                  <input class="form-control" type="file" id="passportFile">
                            </div>
                            <div class="upload-ft">
								<div class="ft-left">
                                    <button type="button" class="btn btn-primary">Upload</button>
								</div>
                                <button type="button" class="btn btn-history btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#uploadHistory"><i class="fas fa-history"></i> 上傳紀錄</button>
                            </div>
                        </div>
                    </div>
                </section>
				
                <section class="application-section">
                    <h4 class="section-title">
                        <span>申請表</span>
                    </h4>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="chName" class="form-label">
                                    中文姓名
                                </label>
                                <input type="text" class="form-control" id="chName" value="安吉拉威爾遜" />
                                <div class="form-text">須與身分證相同，如有改名，請寄送相關文件以資證明</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="enName" class="form-label">
                                    英文姓名
                                </label>
                                <input type="text" class="form-control" id="enName" />
                                <div class="form-text">須與護照相同，製作結業證書使用</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    性別
                                </label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="genderRadio" id="maleRadio" value="option1" />
                                        <label class="form-check-label" for="maleRadio">男</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="genderRadio" id="femaleRadio" value="option2" />
                                        <label class="form-check-label" for="femaleRadio">女</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="idNumber" class="form-label">
                                    身分證字號
                                </label>
                                <input type="text" class="form-control" id="idNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    出生日期
                                </label>
                                <div class="input-group date" id="datepicker">
                                    <input class="form-control" placeholder="MM/DD/YYYY" />
                                    <span class="input-group-append input-group-addon">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="graduatedSchool" class="form-label">
                                    畢業學校
                                </label>
                                <input type="text" class="form-control" id="graduatedSchool" />
                                <div class="form-text">如果是在校生，請填寫就讀學校</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="graduatedDepartment" class="form-label">
                                    畢業科系
                                </label>
                                <input type="text" class="form-control" id="graduatedDepartment" />
                                <div class="form-text">如果是在校生，請填寫就讀科系</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="serviceUnit" class="form-label">
                                    服務單位
                                </label>
                                <input type="text" class="form-control" id="serviceUnit" />
                                <div class="form-text">授課教師分組討論參考用，就學請填寫校名，無請寫待業</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="jobTitle" class="form-label">
                                    職稱
                                </label>
                                <input type="text" class="form-control" id="jobTitle" />
                                <div class="form-text">授課教師分組討論參考用</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phoneNumber" class="form-label">
                                    室內電話
                                </label>
                                <input type="text" class="form-control" id="phoneNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="mobileNumber" class="form-label">
                                    行動電話
                                </label>
                                <input type="text" class="form-control" id="mobileNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="emailAddress" class="form-label">
                                    電子信箱
                                </label>
                                <input type="email" class="form-control" id="emailAddress" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="postalCode" class="form-label">
                                    郵遞區號
                                </label>
                                <input type="text" class="form-control" id="postalCode" />
                                <div class="form-text"><a href="#" target="_blank">郵遞區號查詢</a></div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="postalCode" class="form-label">
                                    地址
                                </label>
                                <input type="text" class="form-control" id="postalCode" />
                                <div class="form-text">如缺課時數與結業考試成績符合資格，中英文證書於課程結束後兩個月以掛號寄送此地址</div>
                            </div>
                        </div>
                    </div>
                </section>

			</div>
			<div class="form-action">
				<button type="button" class="btn btn-lg btn-primary">送出補件紀錄</button>
				<span class="has-history"><a href="#" class="btn btn-lg btn-history btn-outline-secondary"><i class="fas fa-history"></i> 查看申請紀錄</a></span>
			</div>
		</main>
	</div>
</div>

<%= render :partial => "/partials/upload-history" %>

<% content_for :js do %>
    <!-- sidenav scrollbar -->
    <script src="../javascripts/jquery.scrollbar.min.js"></script>
    <script>
        jQuery(document).ready(function(){
            jQuery('.scrollbar-inner').scrollbar();
        });
	</script>

    <!-- sidenav open -->
	<script>
        (function () {
          'use strict'

          document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
            document.querySelector('.offcanvas-collapse').classList.toggle('open')
          })
        })()
	</script>

    <!-- sidenav close -->
    <script>
        $("#widget-overlay").click(function(){
            $(".offcanvas-collapse").removeClass("open");
        });
	</script>

    <!-- date & time picker -->
    <script src="../javascripts/moment.min.js"></script>
    <script src="../javascripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        if (/Mobi/.test(navigator.userAgent)) {
            // if mobile device, use native pickers
            $(".date input").attr("type", "date");
            $(".time input").attr("type", "time");
        } else {
            // if desktop device, use DateTimePicker
            $("#datepicker").datetimepicker({
                useCurrent: false,
                format: "DD-MMM-YYYY",
                showTodayButton: true,
                icons: {
                    next: "fa fa-chevron-right",
                    previous: "fa fa-chevron-left",
                    today: "todayText",
                },
            });
            $("#timepicker").datetimepicker({
                format: "LT",
                icons: {
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down",
                },
            });
        }
	</script>
<% end %>

