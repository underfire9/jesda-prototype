    <!-- lading parallax -->
    <script>
    $(document).ready(function() {
        $('body').mousemove(function(event) {
            // 將頁面中心點設置為新的視覺焦點
            var cx = Math.ceil($('body').width() / 2);
            var cy = Math.ceil($('body').height() / 2);

            // 以新的視覺焦點計算偏移量
            var dx = event.pageX - cx;
            var dy = event.pageY - cy;

            // 計算旋轉角度
            var tiltx = (dy / cy) * 0.15; // 調整垂直偏移量
            var tilty = -(dx / cx) * 0.2; // 調整水平偏移量
            var radius = Math.sqrt(Math.pow(tiltx, 2) + Math.pow(tilty, 2));
            var degree = (radius * 20); // 增加旋轉度數，使效果更明顯

            // 設置旋轉效果
            TweenLite.set("#landing", {
                transform: 'rotate3d(' + tiltx + ', ' + tilty + ', 0, ' + degree + 'deg)'
            });
        });
    });
    </script>
    
