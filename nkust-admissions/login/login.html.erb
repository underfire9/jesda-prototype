<!-- NKUST: 登入 -->

<main class="main">
	<div class="container">
        <div class="login-wrapper">
            <form class="text-center">
                <div class="warpper-title">登入</div>
                <div class="md-form">
                    <input type="email" id="materialLoginFormEmail" class="form-control">
                    <label for="materialLoginFormEmail">請輸入信箱</label>
                </div>
                <div class="md-form">
                    <input type="password" id="materialLoginFormPassword" class="form-control">
                    <label for="materialLoginFormPassword">請輸入密碼</label>
                </div>
                <div class="form-inline">
                    <div class="md-form m-0">
                        <input type="text" id="CAPTCHA" class="form-control">
                        <label for="CAPTCHA">驗證碼</label>
                    </div>
                    <span class="input-group-addon verification">
                        <img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image">
                        <button class="btn btn-xs btn-secondary mx-0" type="button"><i class="fa fa-refresh"></i></button>
                    </span>
                </div>
                <div class="text-center py-4">
                    <button class="btn btn-outline-primary btn-rounded my-4 waves-effect z-depth-0" type="submit">登入</button>
                </div>
                <p class="text-center"><a href="#" class="forget-password">忘記密碼？</a></p>
                <p class="register">還沒有帳號嗎？ <a href="#" title="註冊">註冊</a></p>
            </form>
        </div>
	</div>
</main>



