<!-- template: 來校: 學生 - upload your exchange experience essay -->

<div class="workspace" canvas="container">
    <div class="pages general-pages">
        
        <%= render :partial => "/partials/header-incoming" %>
        
        <div class="content">
            <div class="container-lg">
                <div class="page-content has-sticky">

                    <%= render :partial => "/partials/incoming-result-sidebar" %>
                    
                    <main class="main">
                        
                        <div class="mb-5">
                            <div class="page-title">
                                <h3>Upload your exchange experience essay</h3>
                            </div>
                            
                            <div class="alert alert-warning" role="alert">
                                De-registration period is from 2022-12-01 00:00 ~ 2024-06-30 00:00 (Taiwan Time, GMT+8)
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleInput01" class="form-label">Title</label>
                                <input id="exampleInput01" class="form-control" type="text" value="My Experience at National Taiwan University">
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1" class="form-label">Share with us about your experience at NTU</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="6"></textarea>
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleInput01" class="form-label">Upload relative photos here</label>
                                <div class="d-flex">
                                    <div><input class="form-control" type="file" id=""></div>
                                    <div class="ms-2"><button type="button" class="btn btn-secondary">Upload</button></div>
                                </div>
                                <div class="form-text">Maximum size for file uploaded is 4 MB. Maximum number of files allowed : 0. Allowed file types : jpg、jpeg、png.</div>
                            </div>
                            
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" />
                                <label class="form-check-label" for="exampleCheck1">I agree to share my experience report online</label>
                            </div>

                        </div>
                        
                        <div class="form-action">
                            <button type="submit" class="btn btn-lg btn-primary btn-submit">Confirm and Submit</button>
                            <div class="action-submitted">You already submitted this form. <span>2024/07/31 11:56</span></div>
                        </div>

                    </main>
                </div>
            </div>
        </div>
        <a id="backtop"></a>
    </div>
    <%= render :partial => "/partials/footer" %>
</div>

<% content_for :js do %>

<% end %>
