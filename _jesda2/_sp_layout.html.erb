<body>
    <div class="homepage">
        <%= yield %>
    </div>

    <script src="javascripts/jquery-3.6.0.min.js"></script>
    <script src="javascripts/popper.min.js"></script>
    <script src="javascripts/bootstrap.bundle.js"></script>
    
    <script src="javascripts/three.min.js"></script>
    <script src="javascripts/postprocessing.min.js"></script>
    <script src="javascripts/InfiniteLights.js"></script>
    <script src="javascripts/Distortions.js"></script>
    <script>
    (function() {

        const container = document.getElementById('app');

        const options = {
            onSpeedUp: (ev) => {					
            },
            onSlowDown: (ev) => {
            },
            // mountainDistortion || LongRaceDistortion || xyDistortion || turbulentDistortion || turbulentDistortionStill || deepDistortionStill || deepDistortion
            distortion: LongRaceDistortion, 

            length: 400,
            roadWidth: 14,
            islandWidth: 1,
            lanesPerRoad: 2,

            fov: 90,
            fovSpeedUp: 150,
            speedUp: 2,
            carLightsFade: 0.4,

            totalSideLightSticks: 0,
            lightPairsPerRoadWay: 60,

            // Percentage of the lane's width
            shoulderLinesWidthPercentage: 0,
            brokenLinesWidthPercentage: 0,
            brokenLinesLengthPercentage: 0,

            /*** These ones have to be arrays of [min,max].  ***/
            lightStickWidth: [0.12, 0.5],
            lightStickHeight: [1.3, 1.7],

            movingAwaySpeed: [-30, -40],
            movingCloserSpeed: [15, 20],

            /****  Anything below can be either a number or an array of [min,max] ****/

            // Length of the lights. Best to be less than total length
            carLightsLength: [400 * 0.05, 400 * 0.15],
            // Radius of the tubes
            carLightsRadius: [0.02, 0.02],
            // Width is percentage of a lane. Numbers from 0 to 1
            carWidthPercentage: [0.3, 0.5],
            // How drunk the driver is.
            // carWidthPercentage's max + carShiftX's max -> Cannot go over 1. 
            // Or cars start going into other lanes 
            carShiftX: [-0, 0],
            // Self Explanatory
            carFloorSeparation: [0, 0],

            colors: {
                roadColor: 0x232323,
                islandColor: 0x232323,
                background: 0x232323,
                backgroundCanvas: 0x232323,
                shoulderLines: 0x232323,
                brokenLines: 0x232323,
                /***  Only these colors can be an array ***/
                leftCars: [0x114369, 0x191919, 0x191919],
                rightCars: [0x191919, 0x191919, 0x114369],
                sticks: 0x232323,
            }
        };

        const myApp = new App(container, options);
        myApp.loadAssets().then(myApp.init)
    })()
    </script>
    
</body>
</html>
