<!-- templates: 編輯模式樣板  -->

<div class="container">
	<div class="block-title">
	    <h4 class="h-title">來訪申請表</h4>
	</div>
	
	<div class="form-wrapper">
		<p><span class="required">*</span> 號為必填欄位，請確實填寫</p>
		<form>
			<div class="row">
				<div class="col-6">
					<label class="font-weight-bold"><span class="required">*</span>來訪單位</label>
					<div class="form-row">
						<div class="col-8">
                            <div class="form-group">
                                <select class="browser-default custom-select custom-select pr-4 mr-sm-2">
                                    <option selected>Open this select menu</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
						</div>
						<div class="col-4">
						    <div class="form-group">
								<input type="text" class="form-control" placeholder="其它">
							</div>
						</div>
					</div>
				</div>
				<div class="col-6">
                    <div class="form-group">
                        <label class="font-weight-bold"><span class="required">*</span>欲來訪日期</label>
                        <div class="form-inline">
                            <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker my-0">
                                <input placeholder="選擇日期" type="text" id="example" class="form-control" />
                                <i class="fa fa-calendar input-prefix" tabindex="0"></i>
                            </div>
                            <span class="px-3">至</span>
                            <div id="date-picker-example2" class="md-form md-outline input-with-post-icon datepicker my-0">
                                <input placeholder="選擇日期" type="text" id="example" class="form-control" />
                                <i class="fa fa-calendar input-prefix" tabindex="0"></i>
                            </div>
                        </div>
                        <small  class="form-text text-muted">多國語系請參考 <a href="https://mdbootstrap.com/docs/jquery/forms/date-picker/">Date Picker</a></small >
                    </div>
				</div>
			</div>
			<hr class="hr" />
			<div class="row">
				<div class="col-4">
                    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput">來訪人數</label>
                        <input type="text" class="form-control" id="formGroupExampleInput">
                    </div>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
				    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput2">來訪單位聯絡人姓名</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2">
                    </div>
				</div>
			    <div class="col-6">
                    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput3">Email</label>
                        <input type="email" class="form-control" id="formGroupExampleInput3">
                    </div>
				</div>
			</div>
			<div class="row">
				<div class="col-4">
				    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput4">來訪單位聯絡人電話</label>
                        <input type="text" class="form-control" id="formGroupExampleInput4">
                    </div>
				</div>
			    <div class="col-4">
                    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput5">傳真</label>
                        <input type="text" class="form-control" id="formGroupExampleInput5">
                    </div>
				</div>
				<div class="col-4">
				    <div class="form-group">
                        <label class="font-weight-bold">邀訪單位</label>
                        <select class="browser-default custom-select custom-select pr-4 mr-sm-2">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
				</div>
			</div>
			<hr class="hr" />
			<div class="row">
				<div class="col-6">
				    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput6">陪同人姓名</label>
                        <input type="text" class="form-control" id="formGroupExampleInput6">
                    </div>
				</div>
			    <div class="col-6">
                    <div class="form-group">
                        <label class="font-weight-bold" for="formGroupExampleInput7">Email</label>
                        <input type="email" class="form-control" id="formGroupExampleInput7">
                    </div>
				</div>
			</div>
		</form>
	</div>
</div>

<% content_for :js do %>
<script>
	$('.datepicker').datepicker();
</script>
<% end %>