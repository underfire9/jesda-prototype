<% content_for :js do %>

<!-- 限制 38 個字元 -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const intros = document.querySelectorAll('.article-list .intro');
    
    intros.forEach(intro => {
        const text = intro.textContent.trim();
        if (text.length > 38) {
            intro.textContent = text.slice(0, 38) + ' ..';
        }
    });
});
</script>

<!-- 限制 38 個字元 -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnSidenav = document.querySelector('.btn-sidenav');
    const offcanvas = document.querySelector('.offcanvas');
    const offcanvasBackdrop = document.querySelector('.offcanvas-backdrop');

    function toggleSidenavActive() {
        // 切换按钮的 .active 类
        btnSidenav.classList.toggle('active');
    }

    function removeSidenavActive() {
        // 移除按钮的 .active 类
        btnSidenav.classList.remove('active');
    }

    btnSidenav.addEventListener('click', toggleSidenavActive);
    offcanvasBackdrop.addEventListener('click', removeSidenavActive);
    offcanvas.addEventListener('click', removeSidenavActive);
});

</script>
<% end %>














