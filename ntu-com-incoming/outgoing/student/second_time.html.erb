<!-- template: 出國: 學生 - 第二次線上選填志願 -->

<div class="workspace" canvas="container">
    <div class="pages general-pages">
        
        <%= render :partial => "/partials/header-outgoing" %>
        
        <div class="content">
            <div class="container-lg">
                <div class="page-content has-sticky">
                    
                    <%= render :partial => "/partials/outgoing-result-sidebar" %>
                    
                    <main class="main">
                        <div class="page-title">
                            <h3>第二次線上選填志願</h3>
                        </div>
                        <p><%= lorem_paragraph %></p>
                        <div class="form-group attending-form-group">
                            <label class="form-label">放棄選項</label>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" />
                                <label class="form-check-label" for="exampleCheck1">我同意放棄錄取資格</label>
                            </div>
                        </div>
                        
                        <div class="optional-wrapper">
                            <div class="optional-item optional-head">
                                <div class="item-order">志願序</div>
                                <div class="item-nation">國家</div>
                                <div class="item-school">學校</div>
                                <div class="item-semester">交換學期</div>
                            </div>
                            <div class="optional-dragarea">

                                <!-- select2 bootstrap theme 多筆 select 不會寫，煩請工程師協助 -->
                                <!-- 原始版本樣式不符，請使用 select2 + bootstrap theme -->
                                <% (1..30).map do |i| %>
                                <div class="optional-item">
                                    <div class="item-order">
                                        <span><%= i %></span>
                                    </div>
                                    <div class="item-nation">
                                        <select class="form-select" id="single-select-field" data-placeholder="請選擇國家">
                                            <option></option>
                                            <option>Reactive</option>
                                            <option>Solution</option>
                                            <option>Conglomeration</option>
                                            <option>Algoritm</option>
                                            <option>Holistic</option>
                                        </select>
                                    </div>
                                    <div class="item-school">
                                        <select class="form-select" id="single-select-field" data-placeholder="請選擇學校">
                                            <option></option>
                                            <option>Reactive</option>
                                            <option>Solution</option>
                                            <option>Conglomeration</option>
                                            <option>Algoritm</option>
                                            <option>Holistic</option>
                                        </select>
                                    </div>
                                    <div class="item-semester">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>
                                <% end %>
                            </div>
                        </div>
                        
                        <section class="section">
                            <div class="section-title">
                                <h4>姊妹校額外要求文件</h4>
                            </div>
                            
                            <div class="upload-wrapper fluid-wrapper">
                                <!-- 檔案上傳後多出 .file-pill，當再次上傳時則覆蓋上一筆，點選檔名另開視窗觀看文件 -->
                                
                                <% (1..2).map do |i| %>
                                <div class="upload-item">
                                    <h4><%= lorem_sentence %></h4>
                                    <div class="form-group">
                                          <input class="form-control" type="file" id="photoFile">
                                    </div>
                                    <div class="ft-action">
                                        <span>
                                            <button type="button" class="btn btn-secondary">上傳</button>
                                        </span>
                                        <span>
                                            <div class="file-pill">
                                                <!-- 避免檔名過長有限制最大寬度 140px，超出時會字元會省略，但切記標籤加上 title -->
                                                <a href="#" target="_blank" class="filename" title="避免檔名過長有限制最大寬度.jpg">避免檔名過長有限制最大寬度.jpg</a>
                                                <button type="button" class="btn btn-sm btn-rounded btn-dark" title="移除">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <% end %>
                            </div>
                        </section>
                        
                        <section class="section">
                            <div class="section-title">
                                <h4>姊妹校額外要求文件</h4>
                            </div>
                            
                            <div class="upload-wrapper fluid-wrapper">
                                <!-- 檔案上傳後多出 .file-pill，當再次上傳時則覆蓋上一筆，點選檔名另開視窗觀看文件 -->
                                
                                <% (1..2).map do |i| %>
                                <div class="upload-item">
                                    <h4><%= lorem_sentence %></h4>
                                    <div class="form-group">
                                          <input class="form-control" type="file" id="photoFile">
                                    </div>
                                    <div class="ft-action">
                                        <span>
                                            <button type="button" class="btn btn-secondary">上傳</button>
                                        </span>
                                        <span>
                                            <div class="file-pill">
                                                <!-- 避免檔名過長有限制最大寬度 140px，超出時會字元會省略，但切記標籤加上 title -->
                                                <a href="#" target="_blank" class="filename" title="避免檔名過長有限制最大寬度.jpg">避免檔名過長有限制最大寬度.jpg</a>
                                                <button type="button" class="btn btn-sm btn-rounded btn-dark" title="移除">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <% end %>
                            </div>
                        </section>
                        
                        <div class="form-action">
                            <button type="submit" class="btn btn-lg btn-primary">送出</button>
                        </div>
                        
                    </main>
                </div>
            </div>
        </div>
        <a id="backtop"></a>
    </div>
    <%= render :partial => "/partials/footer" %>
</div>

<% content_for :js do %>

<!-- Select2 + bootstrap theme -->
<script src="../../javascripts/select2.full.min.js"></script>
<script type="text/javascript">
$( '#single-select-field' ).select2( {
    theme: "bootstrap-5",
    width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
    placeholder: $( this ).data( 'placeholder' ),
} );
</script>

<% end %>

