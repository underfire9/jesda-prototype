<% content_for :js do %>
<script>
    $("#toggle_examine").click(function () {
        $(this).toggleClass("active");
        $("#overlay_examine").toggleClass("open");
    });
	$(document).ready(function(){
        $('.enrollanswer_no').click(function(){
            if($(this).is(":checked")) {
                $('.enrollanswer-container').show();
            } 
        });
		$('.enrollanswer_yes').click(function(){
            if($(this).is(":checked")) {
                $('.enrollanswer-container').hide();
            }
        });
    });
</script>
<% end %>