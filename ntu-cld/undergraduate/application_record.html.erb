<div class="container-lg">
	<div class="page-content">
	    <aside class="aside offcanvas-collapse">
			<div class="scrollbar-inner">
				<div class="user-wrapper">
				    <p><i class="far fa-user-circle"></i></p>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Angela Winson
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Change password</a></li>
                            <li><a class="dropdown-item" href="#">Log out</a></li>
                        </ul>
                    </div>
				</div>
		        <div class="sidenav">
                    <ul class="navigation menu-item">
                        <li><a class="nav-item" href="#">首頁</a></li>
                        <li><a class="nav-item" href="#">報名紀錄查詢</a></li>
						<li><a class="nav-item" href="#">繳費作業</a></li>
                        <li><a class="nav-item" href="#">獎學金資料上傳</a></li>
						<li><a class="nav-item current" href="#">表單申請紀錄</a></li>
                    </ul>
				</div>
			</div>
		</aside>
		<div id="widget-overlay"></div>
		<main class="main">
			<h2 class="mb-4">表單申請紀錄</h2>
            <section class="application-section">
				<div class="record-toolbar">
				    <span class="package">
                        <select class="form-select" aria-label="Default select example">
                            <option value="1">全部申請表</option>
                            <option value="2">已申請過的申請表名稱</option>
                        </select>
					</span>
					<span class="package">
                        <select class="form-select" aria-label="Default select example">
                            <option value="1">全部狀態</option>
                            <option value="2">申請中</option>
							<option value="3">已核准</option>
							<option value="4">已取消</option>
							<option value="5">暫存</option>
                        </select>
					</span>
				</div>
				<div class="table-responsive keep-all">
                    <table class="table table-lg align-middle">
                        <thead>
                            <tr>
                                <th>表單名稱</th>
                                <th>申請時間</th>
                                <th>目前狀態</th>
                                <th class="text-end">電子檔案</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>在學證明及出缺席證明</td>
                                <td>2022-06-30 13:30</td>
                                <td>處理中</td>
                                <td class="text-end"><a href="#" class="btn btn-outline-cld">下載</a></td>
                            </tr>
							<tr>
                                <td>Certificate of Attendance and Certificate of Absence</td>
                                <td>2022-06-30 13:30</td>
                                <td>Processing</td>
                                <td class="text-end"><a href="#" class="btn btn-outline-cld">download</a></td>
                            </tr>
                        </tbody>
                    </table>
				</div>
            </section>
		</main>
	</div>
</div>


<%= render :partial => "/partials/upload-history" %>

<% content_for :js do %>
    <!-- sidenav scrollbar -->
    <script src="../javascripts/jquery.scrollbar.min.js"></script>
    <script>
        jQuery(document).ready(function(){
            jQuery('.scrollbar-inner').scrollbar();
        });
	</script>

    <!-- sidenav open -->
	<script>
        (function () {
          'use strict'

          document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
            document.querySelector('.offcanvas-collapse').classList.toggle('open')
          })
        })()
	</script>

    <!-- sidenav close -->
    <script>
        $("#widget-overlay").click(function(){
            $(".offcanvas-collapse").removeClass("open");
        });
	</script>
<% end %>

