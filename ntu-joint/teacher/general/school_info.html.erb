<!-- NTU-Joint: 學校基本資料修改  -->

<div class="container">
    <div class="login-wrap wide">
        <form>
			<h4 class="wrapper-title">School Profile</h4>
            <div class="form-group mb-5">
                <textarea class="form-control rounded-0" id="schoolProfile" rows="6"><%= lorem_paragraphs(2) %></textarea>
            </div>
			<h4 class="wrapper-title">School Information</h4>
            <div class="md-form">
                <select class="mdb-select md-form">
                    <option value="" disabled selected><span class="required">*</span> Country</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
			<div class="row">
				<div class="col-6">
					<div class="md-form">
                        <input type="text" id="registerForSchoolEnglish" class="form-control" value="North Tahoe High School">
                        <label for="registerForSchoolEnglish"><span class="required">*</span> School English Name</label>
                    </div>
				</div>
				<div class="col-6">
                    <div class="md-form">
                        <input type="text" id="registerForSchoolChinese" class="form-control">
                        <label for="registerForSchoolChinese">School Chinese Name</label>
                    </div>
				</div>
			</div>
			<div class="md-form">
                <input type="text" id="registerForOriginalSchoolName" class="form-control" value="North Tahoe High School">
                <label for="registerForOriginalSchoolName">Original school name</label>
            </div>
			
			<div class="row">
				<div class="col-6">
                    <div class="md-form">
                        <input type="text" id="registerForOrganizersName" class="form-control" value="John Doe">
                        <label for="registerForOrganizersName"><span class="required">*</span>Organizer's name</label>
                    </div>
				</div>
				<div class="col-6">
                    <div class="md-form">
                        <input type="text" id="registerForOrganizersDepartment" class="form-control" value="Office Of Academic Affairs">
                        <label for="registerForOrganizersDepartment"><span class="required">*</span>Organizer Department</label>
                    </div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-6">
                    <div class="md-form">
                        <input type="text" id="registerForOrganizersPosition" class="form-control" value="Director Of Academic Affairs">
                        <label for="registerForOrganizersPosition"><span class="required">*</span>Organizer job title</label>
                    </div>
				</div>
				<div class="col-6">
                    <div class="md-form">
                        <input type="text" id="registerForOrganizersContact" class="form-control" value="+1 530-581-7000">
                        <label for="registerForOrganizersContact"><span class="required">*</span>Contact number</label>
                    </div>
				</div>
			</div>
			
			<div class="md-form">
                <input type="email" id="registerForOrganizersEmail" class="form-control" value="johndoe@nths.ttusd.org">
                <label for="registerForOrganizersEmail"><span class="required">*</span> Email</label>
            </div>
						
            <div class="text-center py-4">
                <button class="btn btn-outline-success btn-rounded my-4 waves-effect z-depth-0" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

<% content_for :js do %>
<script>
$(document).ready(function() {
    $('.mdb-select').materialSelect();
});
$(function() {
    $("#registerForSchoolCheck").click(function() {
        if ($(this).is(":checked")) {
            $("#registerForKeyName").show();
        } else {
            $("#registerForKeyName").hide();
        }
    });
});
</script>
<% end %>