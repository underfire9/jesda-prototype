<div class="container-fix">
    <div class="page-content fixed">
        <div class="subject-head">
            <h3>ABC12345 Graduation grade review assignments</h3>
        </div>
        <div class="page-content-inner review-wrapper">
            <div class="review-info">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label fw-bold">Student ID</label>
                            <div class="form-output">M11100112345</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label fw-bold">Name</label>
                            <div class="form-output">史嘉蕾</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="form-label fw-bold">English Name</label>
                            <div class="form-output">Scarlett Ingrid Johansson</div>
                        </div>
                    </div>
                    
                    
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label fw-bold">Total credits taken</label>
                            <div class="form-output">30</div>
                            <div class="form-text">Total credits not included in graduation credits</div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label fw-bold">Course credits for this semester</label>
                            <div class="form-output">30</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label fw-bold">Review result</label>
                        <div class="mb-2">
                            <button type="button" class="btn btn-secondary">Cache</button>
                            <button type="button" class="btn btn-primary">Pass</button>
                            <button type="button" class="btn btn-warning">Return</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label fw-bold">Check items</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList01" />
                                <label class="form-check-label" for="checkList01">1. Literature review</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList02" />
                                <label class="form-check-label" for="checkList02">2. Citation problems</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList03" />
                                <label class="form-check-label" for="checkList03">3. Research Method</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList04" />
                                <label class="form-check-label" for="checkList04">4. References</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList05" />
                                <label class="form-check-label" for="checkList05">5. Abstract/Acknowledgements</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList06" />
                                <label class="form-check-label" for="checkList06">6. NTU Library requirements</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList07" />
                                <label class="form-check-label" for="checkList07">7. Table Of Content</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList08" />
                                <label class="form-check-label" for="checkList08">8. APA/MLA Formatting</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList09" />
                                <label class="form-check-label" for="checkList09">9. Main text</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList10" />
                                <label class="form-check-label" for="checkList10">10. Tables</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList11" />
                                <label class="form-check-label" for="checkList11">11. Figures</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="checkList12" />
                                <label class="form-check-label" for="checkList12">12. Grammar and Spelling</label>
                            </div>                
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label fw-bold">Review opinion</label>
                        <textarea class="form-control" rows="4" readonly>123</textarea>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <button type="button" class="btn btn-light">Back</button>
                            <button type="button" class="btn btn-light">Course</button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary">Cache</button>
                            <button type="button" class="btn btn-primary">Pass</button>
                            <button type="button" class="btn btn-warning">Return</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pdf-wrapper flex-col">
                <div class="section-title">
                    <h4>Graduation results</h4>
                </div>
                
                <!-- pdf viewer 只是確認視覺版面，請套系統慣用 -->
                <!-- iframe 最小高度 768px，或是與左側區塊同高(大於 768px) -->
                <iframe src="https://docs.google.com/viewer?url=http://www.pdf995.com/samples/pdf.pdf&embedded=true" frameborder="0" height="750px" width="100%"></iframe>

            </div>
        </div>
    </div>
</div>



