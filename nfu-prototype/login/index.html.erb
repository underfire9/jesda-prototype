<!-- 登入 -->

<div class="login-wrapper">
    <div class="back-home">
        <a href="../index.html"><img class="logo" src="../assets/logo_white.svg" /></a>
    </div>
    <div class="login-container">
        <h4 class="font-weight-bold text-center">學生專區</h4>
        <form action="../student/index.html">
            <div class="md-form mb-4">
                <i class="fa fa-envelope prefix grey-text"></i>
                <input type="email" id="defaultForm-email" class="form-control validate">
                <label data-error="wrong" data-success="right" for="defaultForm-email">帳號</label>
            </div>
    
            <div class="md-form mb-4">
                <i class="fa fa-lock prefix grey-text"></i>
                <input type="password" id="defaultForm-pass" class="form-control validate">
                <label data-error="wrong" data-success="right" for="defaultForm-pass">密碼</label>
            </div>
            
            <div class="md-form mb-4">
                <i class="fa fa-exclamation-triangle prefix grey-text"></i>
                <input type="text" id="defaultForm-text" class="form-control validate">
                <label data-error="wrong" data-success="right" for="defaultForm-text">驗證碼</label>
                <span class="input-group-addon verification">
                    <img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image">
                </span>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary btn-rounded" type="submit">登入</button>
                <a href="javascript:history.back()" class="btn-cancel text-danger">取消</a>
            </div>
        </form>
    </div>
</div>

