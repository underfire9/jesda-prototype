<div class="container-lg">
	<div class="login-wrapper">
		<div class="login-card">
		    <div class="card-hd">
			    <h3>登入</h3>
			</div>
            
            <!-- Wording 用 "信箱" "密碼" 就好 -->
			<div class="card-bd">
                <div class="form-group">
                    <label for="exampleFormControlInput1" class="form-label">信箱</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" />
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput2" class="form-label">密碼</label>
                    <input type="password" class="form-control" id="exampleFormControlInput2" />
                </div>
			</div>
            <div class="d-grid mt-4">
                <button class="btn btn-lg btn-primary" type="button">登入</button>
            </div>
            <p class="text-center mt-5">尚無帳號？<a href="#">立即註冊</a></p>
            <p class="text-center mt-4"><a href="#">忘記密碼</a></p>
		</div>
	</div>
</div>



