<div class="pages general-pages">
    <header class="header" id="pagetop">
        <div class="container-fix">
            <div class="header-wrap">
                <div class="header-function">
                    <span class="toggler-wrap"></span>
                    <div class="header-right">
                        <div class="operate">
                            <div class="switch">
                                <a href="#">Switch semester</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="brands">
                    <a class="brands-link" href="index.html">
                        <div class="logo">
                            <h1 class="text-hide">GMBA</h1>
                            <img class="h1-logo" src="../assets/logo@2x.png">
                        </div>
                    </a>
                    <div class="sys-subject">
                        <h2>2022 Spring GMBA Teaching assistant TA course report filling system</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="content">
        <div class="container-fix">
            <div class="page-content index-content">
                <main class="main">
                    <div class="page-title">
                        <h3>Announcement</h3>
                    </div>
                    <div class="announcement-wrapper">
                        <ul class="article-list menu-item">
                            <% (1..3).map do |i| %>
                            <li>
                                <span class="item-hd">
                                    <span class="pin"><i class="fas fa-thumbtack"></i></span>
                                    <time class="item-time">2023-09-24</time>
                                </span>
                                <a href="#" class="item-link"><%= lorem_sentences(2) %></a>
                            </li>
                            <% end %>
                            <% (1..5).map do |i| %>
                            <li>
                                <span class="item-hd">
                                    <time class="item-time">2023-09-24</time>
                                </span>
                                <a href="#" class="item-link"><%= lorem_sentences(2) %></a>
                            </li>
                            <% end %>
                        </ul>
                        <p class="text-end mb-0 mt-4">
                            <a href="#" class="btn btn-light">
                                MORE
                                <i class="fas fa-long-arrow-alt-right"></i>
                            </a>
                        </p>
                    </div>
                </main>
                <aside class="aside">
                    <div class="login-card">
                        <div class="card-hd">
                            <h3>Log in</h3>
                        </div>
                        <div class="card-bd">
                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" />
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput2" class="form-label">Password</label>
                                <input type="password" class="form-control" id="exampleFormControlInput2" />
                            </div>
                            <div class="form-group">
                                <label for="loginInput4" class="form-label">Verification code</label>
                                <div class="d-flex align-items-center">
                                    <span class="me-1"><input type="text" class="form-control" id="loginInput4" /></span>
                                    <span class="me-1"><img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image" /></span>
                                    <span>
                                        <button class="btn btn-xs btn-outline-primary" type="button"><i class="fas fa-sync-alt"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-lg btn-block btn-primary" type="submit">Login</button>
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-lg btn-block btn-secondary" type="button">NTU SSO </button>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
    <a id="backtop"></a>
</div>
