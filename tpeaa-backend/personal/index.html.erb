<!-- TPEAA: 個人資料 帳號密碼 -->

<main class="main">
    <div class="page-header">
        <h2>個人資料</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="col-block">
                <div class="block-header has-border"><h3>帳號密碼</h3></div>
                <div class="block-content">
					<form>
						<div class="form-group">
							<label for="exampleInputEmail1" class="active">登入帳號</label>
							<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
							<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1" class="active">登入密碼</label>
							<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
						</div>
						<button type="submit" class="btn btn-primary waves-effect waves-light">儲存</button>
					</form>
                </div>
            </div>
        </div>
    </div>
</main>

