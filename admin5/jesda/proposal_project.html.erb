					<li class="nav-item">
						<a href="#proposal_spec" class="nav-link" aria-controls="proposal_spec" role="tab" data-bs-toggle="tab" data-bs-target="#proposal_spec" aria-selected="false">需求規格</a>
					</li>
					<li class="nav-item">
						<a href="#proposal_maintain" class="nav-link" aria-controls="proposal_maintain" role="tab" data-bs-toggle="tab" data-bs-target="#proposal_maintain" aria-selected="false">維護工作</a>
					</li>
                </ul>
				
                <div class="block-content tab-content" id="nav-tabContent">
                    <div role="tabpanel" class="tab-pane active" id="proposal_dashborad" aria-labelledby="nav-proposal_dashborad-tab" tabindex="0">
                        <h4 class="push">Block Tabs With Options</h4>
                        <%= lorem_sentences(5) %>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="proposal_basic" aria-labelledby="nav-proposal_basic-tab" tabindex="0">
						<%= render :partial => "/partials/proposal_basic" %>
					</div>
					<div role="tabpanel" class="tab-pane" id="proposal_project" aria-labelledby="nav-proposal_project-tab" tabindex="0">
