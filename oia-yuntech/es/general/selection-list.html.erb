<!-- oia-yuntech: 甄選學校一覽表 -->

<div class="container">
	<h4 class="block-title">交換學校一覽表</h4>
	<div class="awall d-flex align-items-center">
		<span>過濾洲別國家</span>
        <div class="mx-2">
            <select class="browser-default custom-select d-inline-block">
                <option selected>選擇洲別</option>
                <option value="1">美洲 Americas</option>
                <option value="2">大洋洲 Oceania</option>
                <option value="3">Three</option>
            </select>
        </div>
		<div class="mx-2">
            <select class="browser-default custom-select d-inline-block">
                <option selected>選擇國家</option>
                <option value="1">BOSNIA AND HERZEGOWINA 波斯尼亞和黑塞哥維那</option>
                <option value="2">CZECH REPUBLIC 捷克共和國</option>
                <option value="3">GIBRALTAR 直布羅陀</option>
            </select>
        </div>
	</div>
    <table class="table table-striped table-sm">
	    <thead>
		    <tr>
			    <th></th>
				<th>洲別</th>
				<th>國家</th>
				<th>中文名稱</th>
				<th>英文名稱</th>
				<th class="text-center">交換期間</th>
				<th class="text-center">名額</th>
				<th class="text-center">詳細說明</th>
			</tr>
		</thead>
		<tbody>
			<% (1..20).each do |n| %>
		    <tr>
			    <td class="text-center"><%= n %></td>
				<td>亞洲</td>
				<td>大陸地區</td>
				<td>南京理工大學</td>
				<td>Nanjing University of Science and Technology</td>
				<td class="text-center">一學期</td>
				<td class="text-center">2</td>
				<td class="text-center">
				    <a class="selection-info" href="school-info.html">開啟</a>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<hr>
    <nav aria-label="Page navigation">
        <ul class="pagination pg-teal justify-content-end">
            <li class="page-item ">
                <a class="page-link" tabindex="-1">Previous</a>
            </li>
            <li class="page-item"><a class="page-link">1</a></li>
            <li class="page-item active">
                <a class="page-link">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item ">
                <a class="page-link">Next</a>
            </li>
        </ul>
    </nav>
</div>

