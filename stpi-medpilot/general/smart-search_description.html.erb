                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="radioOptions" id="radio2" value="option2" />
                        <label class="form-check-label" for="radio2">Scheduled generation (no need to wait, the system will notify you and bring the results into the system field after generation)</label>
                    </div>
                </div>
            </div>
            
            <div class="form-action">
                <a href="#" class="btn btn-lg btn-light btn-back">
                    <i class="fas fa-long-arrow-alt-left"></i> Back
                </a>
                <button type="button" class="btn btn-lg btn-outline-success">Save</button>
                <button type="button" class="btn btn-lg btn-primary">Next GenAi</button>
            </div>
            
            <!-- 排程按鈕 -->
            <div class="form-action">
                <button type="button" class="btn btn-lg btn-outline-primary">Schedule created</button>
                <button type="button" class="btn btn-lg btn-outline-danger">Cancel scheduled</button>
            </div>
            
        </section>
        
