<input type="checkbox" class="sr-only sidebar-ctrler" id="v-nav-secondary" checked>
<div class="vertical_nav sidebar sidebar--secondary event-sidebar">
    <div class="sidebar__header media">
        <div class="media-left"></div>
        <div class="media-body media-middle text-right">
            <label class="sidebar-ctrler--label" for="v-nav-secondary"><i class="fa fa-ellipsis-v"></i></label>
        </div>
    </div>
    <div class="menu">
        <div class="sidebar-scroll">
            <ul class="nav">
                <!-- DATA from /kktix-prototype/admin/view_helpers.rb -->
                <% event_sidebar_items.each do |item| %>
                <li<%= item[:active] ? ' class="active"' : '' %>>
                    <a href="<%= item[:href] %>">
                        <i class="fa <%= item[:icon] %>" title="<%= item[:title] %>"></i>
                        <span class="menu-label"><%= item[:title] %></span>
                    </a>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
