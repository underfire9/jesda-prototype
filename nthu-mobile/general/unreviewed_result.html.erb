<!-- nthu-mobile: 待審查 - 審查結果 -->

<div class="page">
    <div class="page-wrapper">
        <%= render :partial => "/partials/header" %>
        <div class="content-wrapper">
			<%= render :partial => "/partials/breadcrumb" %>
            <div class="btn-group btn-group-bar">
				<!-- 勿改 wording 變長會跑版 -->
                <a href="#" class="btn">申請表</a>
                <a href="#" class="btn">簽核流程</a>
                <a href="#" class="btn current">審查結果</a>
            </div>
            <div class="container">
                <main class="main">
				    <h5 class="text-center mt-4">行政業務電腦化需求提案單</h5>
					<div class="form-group">
                        <label>審查結果</label>
						<div class="resul-pick-item">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="resultYes" name="reviewResult">
                                <label class="custom-control-label" for="resultYes">同意
                                    <span class="next-level">雷諾斯</span>
                                </label>
                            </div>
						</div>
						<div class="resul-pick-item">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="resultNo" name="reviewResult">
                                <label class="custom-control-label" for="resultNo">不同意
                                    <span class="next-level">申請人</span>
                                </label>
                            </div>
						</div>
						<div class="resul-pick-item">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="resultDistinguish" name="reviewResult">
                                <label class="custom-control-label" for="resultDistinguish">分辨</label>
                            </div>
                            <select class="browser-default custom-select">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
						</div>
						<div class="resul-pick-item">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="resultBack" name="reviewResult">
                                <label class="custom-control-label" for="resultBack">退上一關卡
                                    <span class="next-level">申請人</span>
                                </label>
                            </div>
						</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">審查意見</label>
                        <textarea class="form-control rounded-0" id="exampleFormControlTextarea1" rows="4"></textarea>
                    </div>
					<div class="form-group">
						<label>關卡文件上傳</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" />
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
					</div>
					<div class="text-center">
					    <button type="button" class="btn btn-block btn-secondary btn-rounded">送出</button>
					</div>
				</main>
			</div>
        </div>
    </div>
</div>

<% content_for :js do %>
<% end %>