<!-- NTU-Joint: 申請首頁  -->

<div class="container">
	<div class="operation-wrapper">
        <div class="row">
            <div class="col-7">
                <h4 class="font-700">Note</h4>
				<p><%= lorem_sentences(3) %></p>
                <p><%= lorem_sentences(8) %></p>
                <p><%= lorem_sentences(5) %></p>
            </div>
            <div class="col-5">
                <div class="open-wrap">
                    <h5 class="text-danger font-500">Open application start date</h5>
                    <h6 class="font-500">January 31, 2020 08:00 to February 28, 2020 23:59 <br />Taiwan (GMT+8)</h6>
                    <div class="active-wrap">
                        <div class="btn-wrap has-border">
                            <a class="btn start-filling" href="#">Start filling<i class="fa fa-arrow-circle-right"></i></a>
                            <p class="undon">undon</p>
                        </div>
                        <div class="btn-wrap">
                            <a class="btn pay" href="#">Pay<i class="fa fa-arrow-circle-right"></i></a>
                            <p class="done"><i class="fa fa-check"></i> done</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
	<div class="mission-wrapper">
	    <span>Fully completed?</span>
		<!-- 表單與繳費未完成前按鈕狀態應該為 disabled -->
		<button type="button" class="btn btn-lg peach-gradient" disabled>Submit application</button>
	</div>
</div>

