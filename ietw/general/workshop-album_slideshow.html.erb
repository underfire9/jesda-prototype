            <!-- 主要內容 -->
            <main class="main">
                <a accesskey="C" href="#accesskey_content" tabindex="0" title="主要內容" id="accesskey_content" class="ackey">:::</a>

                <article class="page-article">
					<div class="post-head">
						<div class="post-title wrap-reverse">
							<span class="prev">
                                <button type="button" class="btn btn-prev btn-round btn-outline-secondary"><i class="fas fa-long-arrow-alt-left"></i> 回上一頁</button>
							</span>
                            <h3>講師研習營施計畫(SIEP國際交流)</h3>
						</div>
						<div class="info-detail">
							<span title="時間"><i class="fas fa-clock"></i> 2021-10-28</span>
						    <span title="地點"><i class="fas fa-map-marker-alt"></i> 教育部</span>
						</div>
					</div>
					
					<div class="post-content">
						
						<!-- 相片標準尺寸比例為 16:9，超出的部分會被遮蔽，高度不足會像第一張下方留白，後台上傳處請註明提醒使用者上傳標準比例的照片 -->
						<div class="splide-slider">
                            <div id="main-slider" class="splide main-slider">
                                <div class="splide__track">
                                    <ul class="splide__list">
										<% (1..2).map do |i| %>
										<li class="splide__slide">
                                            <img src="../assets/fake/03.jpg" />
                                        </li>
										<li class="splide__slide">
                                            <img src="../assets/fake/04.jpg" />
                                        </li>
										<li class="splide__slide">
                                            <img src="../assets/fake/fake-01.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f01.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f02.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f03.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f04.jpg" />
                                        </li>
										<% end %>
                                    </ul>
                                </div>
                            </div>
                            <div id="thumbnail-slider" class="splide thumbnail-slider">
                                <div class="splide__track">
                                    <ul class="splide__list">
										<% (1..2).map do |i| %>
										<li class="splide__slide">
                                            <img src="../assets/fake/03.jpg" />
                                        </li>
										<li class="splide__slide">
                                            <img src="../assets/fake/04.jpg" />
                                        </li>
										<li class="splide__slide">
                                            <img src="../assets/fake/fake-01.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f01.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f02.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f03.jpg" />
                                        </li>
                                        <li class="splide__slide">
                                            <img src="../assets/fake/f04.jpg" />
                                        </li>
										<% end %>
                                    </ul>
                                </div>
                            </div>
						</div>
						
						<div class="download-wrap">
							<h5><strong>資料下載</strong></h5>
						    <a class="dl-item" href="#" title="{連結名稱}">05-109 1210-中小學國際教育2.0講師研習營施計畫(SIEP雙語課程)手冊_compressed (1).pdf</a>
						</div>
						
					</div>
				</article>
				
            </main>
			
		</div>
	</div>
</div>



<% content_for :js do %>
    <!-- splide js slider -->
    <script src="../javascripts/splide.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var main = new Splide("#main-slider", {
                type: "fade",
                rewind: true,
                pagination: false,
                arrows: false,
            });

            var thumbnails = new Splide("#thumbnail-slider", {
                fixedWidth: 160,
                fixedHeight: 90,
                gap: 2,
                rewind: true,
                pagination: false,
                cover: true,
                isNavigation: true,
                breakpoints: {
                    768: {
                        fixedWidth: 120,
                        fixedHeight: 68,
                    },
					767: {
                        fixedWidth: 80,
                        fixedHeight: 45,
                    },
                },
            });

            main.sync(thumbnails);
            main.mount();
            thumbnails.mount();
        });
    </script>
<% end %>




