<!-- template: 資料庫系統使用統計表 -->

<div class="container-lg">
    <div class="section-title">
        <h3>訂單紀錄</h3>
    </div>
    
    <ul class="nav nav-tabs statistics-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="month-tab" data-bs-toggle="tab" data-bs-target="#month-tab-pane" type="button" role="tab" aria-controls="month-tab-pane" aria-selected="true">資料庫系統每月使用統計</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="years-tab" data-bs-toggle="tab" data-bs-target="#years-tab-pane" type="button" role="tab" aria-controls="years-tab-pane" aria-selected="false">資料庫系統年度使用統計</button>
        </li>
    </ul>

    <div class="tab-content statistics-tab-content" id="myTabContent">

        <div class="tab-pane fade show active" id="month-tab-pane" role="tabpanel" aria-labelledby="month-tab" tabindex="0">
            
            <div class="filter-wrap">
                <div class="wrap-start">
                    <select class="form-select" aria-label="Default select example">
                      <option selected>2024</option>
                      <option value="1">2023</option>
                      <option value="2">2022</option>
                      <option value="3">2021</option>
                    </select>
                </div>
                
                <!-- .wrap-end 請根據最長字串調整 width -->
                <div class="wrap-end" style="width: 30%;">
                    <select class="form-select" id="single-select-optgroup-field" data-placeholder="請選擇資料庫">
                        <option></option>
                        <optgroup label="系統名稱 <%= lorem_words(2) %>">
                            <option>資料庫名稱 <%= lorem_words(2) %></option>
                            <option>資料庫名稱 <%= lorem_words(4) %></option>
                            <option>資料庫名稱 <%= lorem_words(3) %></option>
                        </optgroup>
                        <optgroup label="系統名稱 <%= lorem_words(2) %>">
                            <option>資料庫名稱 <%= lorem_words(2) %></option>
                            <option>資料庫名稱 <%= lorem_words(4) %></option>
                        </optgroup>
                    </select>
                </div>
                
                <span>
                    <button type="button" class="btn btn-primary">查詢</button>
                </span>
            </div>
            
            <div class="statistics-wrap">
                <h4 class="fw-bold mb-3">統計項目名稱 <%= lorem_words(2) %></h4>
                <div class="notice-wrap mb-4">
                    <p><%= lorem_paragraphs(2) %></p>
                    <p><%= lorem_paragraphs(2) %></p>
                </div>
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th>有權使用單位</th>
                            <th>使用單位</th>
                            <th>未使用單位</th>
                            <th>使用總數</th>
                            <th>平均使用數</th>
                            <th>最高使用數</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (1..12).map do |i| %>
                        <tr>
                            <td>2024-0<%= i %></td>
                            <td>13</td>
                            <td>13</td>
                            <td>0</td>
                            <td>1,970,070</td>
                            <td>151,544</td>
                            <td>676,203</td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            
            <div class="statistics-wrap">
                <h4 class="fw-bold mb-3">統計項目名稱 <%= lorem_words(2) %></h4>
                <div class="notice-wrap mb-4">
                    <p><%= lorem_paragraphs(2) %></p>
                    <p><%= lorem_paragraphs(2) %></p>
                </div>
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th>有權使用單位</th>
                            <th>使用單位</th>
                            <th>未使用單位</th>
                            <th>使用總數</th>
                            <th>平均使用數</th>
                            <th>最高使用數</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (1..12).map do |i| %>
                        <tr>
                            <td>2024-0<%= i %></td>
                            <td>13</td>
                            <td>13</td>
                            <td>0</td>
                            <td>1,970,070</td>
                            <td>151,544</td>
                            <td>676,203</td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            
        </div>

        <div class="tab-pane fade" id="years-tab-pane" role="tabpanel" aria-labelledby="years-tab" tabindex="0">

            <div class="filter-wrap">
                <div class="wrap-start">
                    <select class="form-select" aria-label="Default select example">
                      <option selected>2024</option>
                      <option value="1">2023</option>
                      <option value="2">2022</option>
                      <option value="3">2021</option>
                    </select>
                </div>
                
                <!-- .wrap-end 請根據最長字串調整 width -->
                <div class="wrap-end" style="width: 30%;">
                    <select class="form-select" id="single-select-optgroup-field" data-placeholder="請選擇資料庫">
                        <option></option>
                        <optgroup label="系統名稱 <%= lorem_words(2) %>">
                            <option>資料庫名稱 <%= lorem_words(2) %></option>
                            <option>資料庫名稱 <%= lorem_words(4) %></option>
                            <option>資料庫名稱 <%= lorem_words(3) %></option>
                        </optgroup>
                        <optgroup label="系統名稱 <%= lorem_words(2) %>">
                            <option>資料庫名稱 <%= lorem_words(2) %></option>
                            <option>資料庫名稱 <%= lorem_words(4) %></option>
                        </optgroup>
                    </select>
                </div>
                
                <span>
                    <button type="button" class="btn btn-primary">查詢</button>
                </span>
            </div>
            
            <div class="table-responsive text-center text-nowrap">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>資料庫名稱</th>
                            <th>統計規範</th>
                            <th>統計項目</th>
                            <th>聯盟總使用數</th>
                            <th>聯盟單位平均數</th>
                            <th>貴單位總使用數</th>
                            <th>貴單位於整體排名</th>
                            <th>所屬群組總使用數</th>
                            <th>所屬群組單位平均數</th>
                            <th>貴單位於所屬群組排名</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (1..30).map do |i| %>
                        <tr>
                            <td>AAAS/Science-Science Signaling</td>
                            <td>R5</td>
                            <td>Fulltext</td>
                            <td>334,837</td>
                            <td>10,147</td>
                            <td>999,999</td>
                            <td>999,999</td>
                            <td>314,698</td>
                            <td>14,986</td>
                            <td>999,999</td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            
            <div class="notice-wrap mt-4">
                <h6 class="fw-bold">備註二</h6>
                <ul>
                    <li>AAAS/Science-Science Robotics：只有兩個訂購單位，不列排名。</li>
                    <li>ASTM Digital Library：只有兩個訂購單位，不列排名。</li>
                    <li>EBSCOhost-CINAHL with FT：只有兩個訂購單位，不列排名。</li>
                </ul>
            </div>
        </div>

    </div>

    
</div>

<% content_for :js do %>

<!-- Select2 + bootstrap theme -->
<script src="../javascripts/select2.full.min.js"></script>
<script type="text/javascript">
    $( '#select-field' ).select2( {
        theme: 'bootstrap-5'
    } );

    $( '#single-select-optgroup-field' ).select2( {
        theme: "bootstrap-5",
        width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
        placeholder: $( this ).data( 'placeholder' ),
    } );
</script>

<% end %>













