                            <div class="form-actions">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-default" role="button"><i class="fa fa-pencil" aria-hidden="true"></i>
</a>
                                    <a class="btn btn-default" role="button"><i class="fa fa-paper-plane" aria-hidden="true"></i>
</a>
                                    <a class="btn btn-default" role="button"><i class="fa fa-rocket" aria-hidden="true"></i>
