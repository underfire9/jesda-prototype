<!-- admin-page: Forms -->
<%= render :partial => "/partials/admin_breadcrumb" %>

<main class="main">
    <div class="page-header">
        <h2>活動類別設定</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3><strong>活動類別資料</strong></h3>
                </div>
                <div class="block-content">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputcate">類別名稱</label>
                            <input type="text" class="form-control" id="exampleInputcate" aria-describedby="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label>狀態</label>
                            <div class="form-inline">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadiosInline1" value="option1" checked>
                                    <label class="form-check-label" for="exampleRadiosInline1">
                                        正常
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadiosInline2" value="option2">
                                    <label class="form-check-label" for="exampleRadiosInline2">
                                        停用
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
				</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3><strong>審查人員</strong></h3>
                </div>
                <div class="block-content">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputcate">所屬單位</label>
                            <div class="row">
                                <div class="col-md-6 m-b-4">
                                    <select class="mdb-select">
                                        <option value="" disabled selected>請選擇一級單位</option>
                                        <option value="1">一級單位選擇</option>
                                        <option value="2">Option 2</option>
                                        <option value="3">Option 3</option>
                                    </select>
                                </div>
                                <div class="col-md-6 m-b-4">
                                    <select class="mdb-select">
                                        <option value="" disabled selected>請選擇二級單位</option>
                                        <option value="1">二級單位選擇</option>
                                        <option value="2">Option 2</option>
                                        <option value="3">Option 3</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 m-b-4">
                                <div class="form-group">
                                    <label for="exampleInputName">姓名</label>
                                    <input type="text" class="form-control" id="exampleInputName" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="col-md-6 m-b-4">
                                <div class="form-group">
                                    <label for="exampleInputNum">員工編號</label>
                                    <input type="text" class="form-control" id="exampleInputNum" aria-describedby="" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 m-b-4">
                                <div class="form-group">
                                    <label for="exampleInputPhone">電話</label>
                                    <input type="text" class="form-control" id="exampleInputPhone" aria-describedby="" placeholder="">
                                </div>
                            </div>
                            <div class="col-md-6 m-b-4">
                                <div class="form-group">
                                    <label for="exampleInputMobile">手機</label>
                                    <input type="text" class="form-control" id="exampleInputMobile" aria-describedby="" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail">電子郵件</label>
                            <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">備註說明</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">儲存</button>
                        <button type="submit" class="btn btn-angel">回列表</button>
                    </form>
				</div>
            </div>
        </div>
    </div>
</main>

<% content_for :js do %>
    <script>
		$(document).ready(function() {
			$('.mdb-select').material_select();
		});
    </script>
<% end %>