<!-- ietw: 英文版 - 常見問題 -->

<%= render :partial => "/partials/breadcrumb" %>
<div class="sidenav-overlay"></div>
<div class="content-wrapper">
    <div class="container">
	    <div class="pages-row">
			
			<!-- 側欄選單 -->
            <div class="sidenav">
                <div class="scrollbar-inner">
                    <a accesskey="L" href="#accesskey_left_nav" tabindex="0" title="左側目錄" id="accesskey_left_nav" class="ackey d-none d-xl-block">:::</a>
                    <div id="accordian_nav" class="sidenav-inner">
                        <h5 class="fw-bold nav-title">FAQ</h5>
                        <ul>
                            <li>
                                <h4>
                                    <a href="#" title="{連結名稱}">Applying for School membership</a>
                                </h4>
                            </li>
                            <li>
                                <h4>
                                    <a href="#" class="current" title="{連結名稱}"><%= lorem_sentence %></a>
                                </h4>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- 主要內容 -->
            <main class="main">
                <a accesskey="C" href="#accesskey_content" tabindex="0" title="主要內容" id="accesskey_content" class="ackey">:::</a>

                <article class="page-article">
					<div class="post-head">
						<div class="post-title">
							<img src="../assets/title_img05.png" alt="FAQ">
                            <h2>FAQ</h2>
						</div>
					</div>
					
					<div class="post-content">
						
						<div class="qa-wrapper">
							
							<div class="qa-group">
                                <h5 class="group-title">A. <%= lorem_sentence %></h5>
                                <div class="accordion" id="accordionG1">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1_01" aria-expanded="true" aria-controls="collapse1_01">
                                                Q1. <%= lorem_sentence %>？
                                            </button>
                                        </h2>
                                        <div id="collapse1_01" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionG1">
                                            <div class="accordion-body">
                                                <%= lorem_paragraph %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingTwo">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1_02" aria-expanded="false" aria-controls="collapse1_02">
                                                Q2. <%= lorem_sentence %>？
                                            </button>
                                        </h2>
                                        <div id="collapse1_02" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionG1">
                                            <div class="accordion-body">
                                                <%= lorem_paragraph %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingThree">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1_03" aria-expanded="false" aria-controls="collapse1_03">
                                                Q3. <%= lorem_sentence %>？
                                            </button>
                                        </h2>
                                        <div id="collapse1_03" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionG1">
                                            <div class="accordion-body">
                                                請參閱國家教育研究院109年10月公告之<a href="#" target="_blank">議題融入說明手冊</a>，或至<a href="#" target="_blank">教育部中小學國際教育2.0全球資訊網</a>(www.ietw2.edu.tw)－SIEP課程發展與教學／SIEP國際交流－SIEP課程發展實作手冊／SIEP國際交流實作手冊－中小學國際教育議題實質內涵說明查看。
                                            </div>
                                        </div>
                                    </div>
                                </div>
							</div>
							
							<div class="qa-group">
                                <h5 class="group-title">B. <%= lorem_sentence %></h5>
                                <div class="accordion" id="accordionG2">
									<% (1..5).map do |i| %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2_0<%= i %>" aria-expanded="false" aria-controls="collapse2_0<%= i %>">
                                                Q<%= i %>. <%= lorem_sentence %>
                                            </button>
                                        </h2>
                                        <div id="collapse2_0<%= i %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionG2">
                                            <div class="accordion-body">
                                                <%= lorem_paragraph %>
                                            </div>
                                        </div>
                                    </div>
									<% end %>
                                </div>
							</div>
							
							<div class="qa-group">
                                <h5 class="group-title">C. <%= lorem_sentence %></h5>
                                <div class="accordion" id="accordionG3">
									<% (1..2).map do |i| %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3_0<%= i %>" aria-expanded="false" aria-controls="collapse3_0<%= i %>">
                                                Q<%= i %>. <%= lorem_sentence %>
                                            </button>
                                        </h2>
                                        <div id="collapse3_0<%= i %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionG3">
                                            <div class="accordion-body">
                                                <%= lorem_paragraph %>
                                            </div>
                                        </div>
                                    </div>
									<% end %>
                                </div>
							</div>
							
							<div class="qa-group">
                                <h5 class="group-title">D. <%= lorem_sentence %></h5>
                                <div class="accordion" id="accordionG4">
									<% (1..4).map do |i| %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4_0<%= i %>" aria-expanded="false" aria-controls="collapse4_0<%= i %>">
                                                Q<%= i %>. <%= lorem_sentence %>
                                            </button>
                                        </h2>
                                        <div id="collapse4_0<%= i %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionG4">
                                            <div class="accordion-body">
                                                <%= lorem_paragraph %>
                                            </div>
                                        </div>
                                    </div>
									<% end %>
                                </div>
							</div>
							
						</div>
						
					</div>
				</article>
				
            </main>
			
		</div>
	</div>
</div>

<% content_for :js do %>

<% end %>




