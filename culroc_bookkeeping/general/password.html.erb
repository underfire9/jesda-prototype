<!-- Culroc-BK: 變更密碼  -->

<div class="container">
    <main class="main-content password">
		<div class="main-hd">
		    <h4>變更密碼</h4>
		</div>
	    <div class="table-wrap">
		    <form>
				<div class="md-form">
					<input type="password" id="password1" class="form-control">
					<label for="password1">請輸入新密碼</label>
				</div>
				<div class="md-form">
					<input type="password" id="password2" class="form-control">
					<label for="password2">請再次輸入</label>
				</div>
				<div class="form-row">
					<div class="col-md-6">
						<div class="md-form">
							<input type="text" id="CAPTCHA" class="form-control">
							<label for="CAPTCHA">驗證碼</label>
						</div>
					</div>
					<div class="col-md-6">
						<div class="md-form">
					        <img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image">
						</div>
					</div>
				</div>
				<div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-outline-default un-shadows waves-effect mr-3" type="submit">送出</button>
                    <a href="javascript:history.back()" class="btn-cancel text-dark">取消</a>
                </div>
			</form>
		</div>
	</main>
</div>