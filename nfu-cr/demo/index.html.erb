			data: [65, 85, 77, 49, 62, 90, 88, 58, 64, 41, 91]
		}]
	}
	var ctx = document.getElementById("myChart");
	var myChart = new Chart(ctx, {
		type: 'radar',
		data: data,
		options: {
		  responsive:true,
				legend: {
						display: false,
					},
					title: {
						display: false,
						text: '專業職能',
