	<div class="page-content">
	    <aside class="aside offcanvas-collapse">
			<div class="scrollbar-inner">
				<div class="user-wrapper">
				    <p><i class="far fa-user-circle"></i></p>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Angela Winson
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Change password</a></li>
                            <li><a class="dropdown-item" href="#">Log out</a></li>
                        </ul>
                    </div>
				</div>
		        <div class="sidenav">
                    <ul class="navigation menu-item">
                        <li>
							<a class="nav-item" href="#">瀏覽申請紀錄</a>
						</li>
                        <li>
							<a class="nav-item" href="#">
								退補件 <span class="badge rounded-pill bg-danger">1</span>
							</a>
						</li>
						<li>
							<a class="nav-item current" href="#">繳交學費</a>
						</li>
						<li>
							<a class="nav-item" href="#">註冊單填寫</a>
						</li>
						<li>
							<a class="nav-item" href="#">分班結果</a>
						</li>
                    </ul>
				</div>
			</div>
		</aside>
		<div id="widget-overlay"></div>
		<main class="main">
			<h2 class="mb-4">繳交學費</h2>
			<h4 class="fw-bold mb-4">2022 Spring Quarter (2022/06/01 ~ 2022/09/31)</h4>
		    <div class="notice-wrapper">
			    <h4 class="notice-title">注意事項</h4>
				<p><%= lorem_paragraph %></p>
				<ol>
					<% (1..3).map do |i| %>
				    <li><%= lorem_sentence %></li>
					<% end %>
				</ol>
			</div>
			<div class="tuition-wrapper">
				<div class="table-responsive keep-all">
                    <table class="table table-lg">
                        <thead>
                            <tr>
                                <th>項次</th>
                                <th>繳費狀態</th>
								<th>費用項目名稱</th>
								<th>繳費期限</th>
                                <th class="text-end">金額</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>未繳費</td>
								<td>押金</td>
								<td></td>
                                <td class="text-end">NTD 5,000</td>
                            </tr>
							<tr>
                                <td>2</td>
                                <td>未繳費</td>
								<td>學費(分期1)</td>
								<td>2022/06/01</td>
                                <td class="text-end">NTD 21,000</td>
                            </tr>
                        </tbody>
                    </table>
				</div>
                <div class="amount-wrap">
                    <span>合計金額：NTD2,500</span>
                    <span><a href="#" class="btn btn-cld btn-rounded"><i class="far fa-credit-card"></i></i> 線上刷卡繳費</a></span>
                </div>
                
                <!-- 完成繳費樣式 -->
                <div class="amount-wrap done">
                    <span>合計金額：NTD2,500</span>
                    <span><strong class="text-success">已完成線上付費：2022/06/01 08:30:59</strong></span>
                </div>
			</div>
			<div class="form-action">
				<button type="button" class="btn btn-lg btn-primary">前往填寫註冊單</button>
				<span class="has-history"><a href="#" class="btn btn-lg btn-history btn-outline-secondary"><i class="fas fa-history"></i> 查看申請紀錄</a></span>
			</div>
		</main>
	</div>
</div>

<% content_for :js do %>
    <!-- sidenav scrollbar -->
    <script src="../javascripts/jquery.scrollbar.min.js"></script>
    <script>
        jQuery(document).ready(function(){
            jQuery('.scrollbar-inner').scrollbar();
        });
	</script>

    <!-- sidenav open -->
	<script>
        (function () {
          'use strict'

          document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
            document.querySelector('.offcanvas-collapse').classList.toggle('open')
          })
        })()
	</script>

    <!-- sidenav close -->
    <script>
        $("#widget-overlay").click(function(){
            $(".offcanvas-collapse").removeClass("open");
        });
	</script>
<% end %>

