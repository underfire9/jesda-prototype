<!-- template: 密碼修改 & 帳號重新驗證 -->

<div class="container-lg">
	
	<!-- 密碼修改 -->
	<div class="login-wrapper">
		<div class="login-card">
		    <div class="card-hd">
			    <h3>密碼修改</h3>
			</div>
			<div class="card-bd">
                <div class="form-group">
                    <label for="exampleFormControlInput1" class="form-label">請輸入原密碼</label>
                    <input type="password" class="form-control" id="exampleFormControlInput1" />
                </div>
				<div class="form-group">
                    <label for="exampleFormControlInput2" class="form-label">輸入新密碼</label>
                    <input type="password" class="form-control" id="exampleFormControlInput2" />
                </div>
				<div class="form-group">
                    <label for="exampleFormControlInput2" class="form-label">再次輸入新密碼</label>
                    <input type="password" class="form-control" id="exampleFormControlInput2" />
                </div>
				<p class="text-secondary mt-3">密碼長度最少8碼，須包含1各大小寫英文字母、數字及特殊符號。</p>
			</div>
            <div class="d-grid mt-5">
                <button class="btn btn-lg btn-primary" type="button">確定</button>
            </div>
		</div>
	</div>
	
	<!-- 帳號重新驗證 -->
	<div class="login-wrapper">
		<div class="login-card">
		    <div class="card-hd">
			    <h3>帳號重新驗證</h3>
			</div>
			<div class="card-bd">
                <div class="form-group">
                    <label for="exampleFormControlInput1" class="form-label">請輸入新的 Email</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" />
                </div>
                <div class="form-group">
                    <label for="loginInput4" class="form-label">請輸入驗證碼</label>
                    <div class="d-flex align-items-center">
                        <span class="me-1"><input type="text" class="form-control" id="loginInput4" /></span>
                        <span class="me-1"><img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image" /></span>
                        <span>
                            <button class="btn btn-xs btn-outline-primary" type="button"><i class="fas fa-sync-alt"></i></button>
                        </span>
                    </div>
                </div>
			</div>
            <div class="d-grid mt-5">
                <button class="btn btn-lg btn-primary" type="button">驗證信箱</button>
            </div>
			<p class="text-center mt-5">
			    <a href="#" class="btn btn-link">返回首頁</a>
			</p>
		</div>
	</div>
</div>



<% content_for :js do %>

<% end %>

