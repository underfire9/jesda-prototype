					<div role="tabpanel" class="tab-pane" id="proposal_maintain" aria-labelledby="nav-proposal_maintain-tab" tabindex="0">
						<%= render :partial => "/partials/proposal_maintain" %>
					</div>
                </div>
				
            </div>
		</div>
    </div>
