        <section class="section">
            <div class="section-title">
                <h4>Description</h4>
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-bold" for="exampleInput01">Title</label>
                <input type="text" class="form-control" id="exampleInput01">
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-bold" for="exampleTextarea01">Product / Technology Description:</label>
                <textarea class="form-control" id="exampleTextarea01" rows="8"></textarea>
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-bold">Please choose to generate online or create a schedule</label>
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="radioOptions" id="radio1" value="option1" />
