
<!-- ntu: 在學生 - 繳費作業畫面 -->

<div class="container-lg">
	<div class="page-content">
	    <aside class="aside offcanvas-collapse">
			<div class="scrollbar-inner">
				<div class="user-wrapper">
				    <p><i class="far fa-user-circle"></i></p>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Angela Winson
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Change password</a></li>
                            <li><a class="dropdown-item" href="#">Log out</a></li>
                        </ul>
                    </div>
				</div>
		        <div class="sidenav">
                    <ul class="navigation menu-item">
                        <li><a class="nav-item" href="#">首頁</a></li>
                        <li><a class="nav-item" href="#">報名紀錄查詢</a></li>
						<li><a class="nav-item current" href="#">繳費作業</a></li>
                        <li><a class="nav-item" href="#">獎學金資料上傳</a></li>
						<li><a class="nav-item" href="#">表單申請紀錄</a></li>
                    </ul>
				</div>
			</div>
		</aside>
		<div id="widget-overlay"></div>
		<main class="main">
			<h2 class="mb-4">繳交學費</h2>
			<h4 class="fw-bold mb-4">2022 Spring Quarter (2022/06/01 ~ 2022/09/31)</h4>
		    <div class="notice-wrapper">
			    <h4 class="notice-title">注意事項</h4>
				<p><%= lorem_paragraph %></p>
				<ol>
					<% (1..3).map do |i| %>
				    <li><%= lorem_sentence %></li>
					<% end %>
				</ol>
			</div>
			<div class="tuition-wrapper">
				<div class="table-responsive keep-all">
                    <table class="table table-lg">
                        <thead>
                            <tr>
                                <th>項次</th>
                                <th>繳費狀態</th>
								<th>費用項目名稱</th>
								<th>繳費期限</th>
                                <th class="text-end">金額</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>
									<!-- 完成繳費與完成時間務必分行 -->
								    <span class="text-success d-block">已完成線上付費</span>
									<span class="text-black-50">2022/06/01 08:30:59</span>
								</td>
								<td>押金</td>
								<td></td>
                                <td class="text-end">NTD 5,000</td>
                            </tr>
							<tr>
                                <td>2</td>
                                <td>
									<!-- 完成繳費與完成時間務必分行 -->
								    <span class="text-success d-block">已完成線上付費</span>
									<span class="text-black-50">2022/06/01 08:30:59</span>
								</td>
								<td>學費(分期1)</td>
								<td>2022/06/01</td>
                                <td class="text-end">NTD 21,000</td>
                            </tr>
							<tr>
                                <td>
								    <div class="form-check">
									     <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
										  <label class="form-check-label" for="flexCheckDefault"></label>
									</div>
								</td>
                                <td>未繳費</td>
								<td>學費(分期2)</td>
								<td>2022/06/31</td>
                                <td class="text-end">NTD 21,000</td>
                            </tr>
                        </tbody>
                    </table>
				</div>
                <div class="amount-wrap">
                    <span>合計金額：NTD {動態金額}</span>
                    <span><a href="#" class="btn btn-cld btn-rounded"><i class="far fa-credit-card"></i></i> 線上刷卡繳費</a></span>
                </div>
			</div>
		</main>
	</div>
</div>


<% content_for :js do %>
    <!-- sidenav scrollbar -->
    <script src="../javascripts/jquery.scrollbar.min.js"></script>
    <script>
        jQuery(document).ready(function(){
            jQuery('.scrollbar-inner').scrollbar();
        });
	</script>

    <!-- sidenav open -->
	<script>
        (function () {
          'use strict'

          document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
            document.querySelector('.offcanvas-collapse').classList.toggle('open')
          })
        })()
	</script>

    <!-- sidenav close -->
    <script>
        $("#widget-overlay").click(function(){
            $(".offcanvas-collapse").removeClass("open");
        });
	</script>
<% end %>

