<!-- admin-page: Table -->
<%= render :partial => "/partials/admin_breadcrumb" %>
<main class="main">
    <div class="page-header">
        <h2>活動類別設定</h2>
    </div>
    <div class="row">
        <div class="col-12">
			<div class="col-block">
				<div class="block-header has-border pr-240">
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-default" title="新增"><i class="fa fa-plus"></i></button>
                        <button type="button" class="btn btn-default" title="全部選取"><i class="fa fa-check-square-o"></i></button>
                        <button type="button" class="btn btn-default" title="刪除"><i class="fa fa-times"></i></button>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-default" title="重新整理"><i class="fa fa-refresh"></i></button>
                        <button type="button" class="btn btn-default" title="顯示全部資料"><i class="fa fa-list"></i></button>
                        <button type="button" class="btn btn-default" title="列表設定"><i class="fa fa-cog"></i></button>
                    </div>
                    <div class="d-inline-flex">
                        <select class="mdb-select mb-0">
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </div>
                    <div class="d-inline-flex">
                        <form class="form-inline md-form form-sm mt-0">
                            <input class="form-control form-control-md mr-3" type="text" placeholder="請輸入關鍵字" aria-label="Search">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </form>
                    </div>
                    <div class="position-search">
                        <form class="form-inline md-form form-sm mt-0">
                            <input class="form-control form-control-md mr-3" type="text" placeholder="請輸入關鍵字" aria-label="Search">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </form>
                    </div>
				</div>
				<div class="block-content expansion">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>
                                <div class="form-check fix-position">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheckbox1">
                                    <label class="form-check-label" for="defaultCheckbox1"></label>
                                </div>
                                </th>
                                <th>編輯</th>
								<th>類別名稱</th>
                                <th>狀態</th>
								<th>審查人員姓名</th>
                                <th>審查人員電話</th>
								<th>審查人員電子郵件</th>
							</tr>
						</thead>
						<tbody>
							<% (1..20).map do |i| %>
								<tr>
								<td>1</td>
								<td>
                                    <div class="form-check fix-position">
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheckbox2">
                                        <label class="form-check-label" for="defaultCheckbox2"></label>
                                    </div>
                                </td>
                                <td><i class="fa fa-pencil-square-o"></i></td>
								<td>說明會</td>
                                <td>正常</td>
								<td>王測試</td>
                                <td>校方</td>
								<td>carol@jesda.com.tw</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
                <div class="block-footer has-border">
                    <div class="pull-left">
                        <select class="browser-default">
                            <option value="" selected>顯示比數</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </div>
                    <div class="pull-right">
                        <ul class="pagination">

                            <!--Arrow left-->
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>

                            <li class="page-item active">
                                <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>

                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
			</div>
        </div>
    </div>
</main>

<% content_for :js do %>
    <script>
		$(document).ready(function() {
			$('.mdb-select').material_select();
		});
    </script>
<% end %>
