<!-- admin-page: UI / Forms -->
<%= render :partial => "/partials/admin_breadcrumb" %>

<main class="main">
    <div class="page-header">
        <h1>Forms</h1>
    </div>
	<div class="col-block">
        <div class="block-header has-border">
            <h3><strong>admin 子系統範本</strong></h3>
        </div>
		<div class="block-content">
		    <div class="row">
			    <div class="col-6">
					<form class="mt-2 mb-4">
                        <div class="form-group">
                            <input type="text" class="form-control" id="templateInput" aria-describedby="templateInput" />
                        </div>
						<div>
						    <button type="button" class="btn btn-secondary">儲存範本</button>
							<button type="button" class="btn btn-primary"><i class="fas fa-search"></i> 送出查詢</button>
						</div>
					</form>
					<hr>
					<form class="mt-4">
						<div class="d-flex align-items-center form-group">
						    <span>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>AND</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
							</span>
							<span class="ms-3 me-1">欄位</span>
							<span>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>名稱</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">複選項目垂直</option>
                                </select>
							</span>
							<span class="ms-3 me-1">條件</span>
							<span>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>等於</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
							</span>
							<span class="ms-3 flex-fill">
								<input type="text" class="form-control" id="templateInput2" aria-describedby="templateInput2" />
							</span>
						</div>
						<div>
							<button type="button" class="btn btn-primary"><i class="fas fa-plus"></i> 加入條件</button>
						</div>
					</form>
				</div>
				<div class="col-6">
                    <div class="form-group">
                        <label for="formFile" class="form-label">Default file input example</label>
                        <input class="form-control" type="file" id="formFile" />
                    </div>
                    <div class="form-group">
                        <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple />
                    </div>
                    <div class="form-group">
                        <label for="formFileDisabled" class="form-label">Disabled file input example</label>
                        <input class="form-control" type="file" id="formFileDisabled" disabled />
                    </div>
				</div>
			</div>
		</div>
	</div>
    <div class="row">
        <div class="col-6">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3><strong>Bootstrap</strong></h3>
                </div>
                <div class="block-content">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" />
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1" />
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
				</div>
            </div>
			<div class="col-block mt-4">
                <div class="block-header has-border">
                    <h3><strong>Date&Time Picker</strong></h3>
                </div>
                <div class="block-content">
					<div class="form-group">
                        <label class="form-label" for="datepicker">DatePicker</label>
                        <div class="input-group date" id="datepicker">
                            <input class="form-control" placeholder="MM/DD/YYYY" />
                            <span class="input-group-append input-group-addon">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </span>
                        </div>
					</div>
                    <div class="form-group">
						<label class="form-label" for="timepicker">TimePicker</label>
                        <div class="input-group time timepicker" id="timepicker">
                            <input class="form-control" placeholder="HH:MM AM/PM" />
                            <span class="input-group-append input-group-addon">
                                <span class="input-group-text"><i class="fa fa-clock"></i></span>
                            </span>
                        </div>
                    </div>
				</div>
            </div>
        </div>
        <div class="col-6">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3><strong>Bootstrap</strong></h3>
                </div>
                <div class="block-content">
                    <form>
                        <div class="form-group">
                            <label class="form-label" for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Example label</label>
                            <select class="browser-default custom-select">
                                <option value="" disabled selected>Choose your option</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                <option value="3">Option 3</option>
                            </select> 
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="exampleFormControlSelect2">Example multiple select</label>
                            <select multiple class="form-control browser-default" id="exampleFormControlSelect2">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="exampleFormControlTextarea1">Example textarea</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" placeholder=".form-control-lg"><br />
                            <input class="form-control" type="text" placeholder="Default input"><br />
                            <input class="form-control form-control-sm" type="text" placeholder=".form-control-sm">
                        </div>
                    </form>
                    <form>
                        <div class="form-group row">
                            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-block">
        <div class="block-header has-border">
            <h3><strong>Horizontal form</strong></h3>
        </div>
        <div class="block-content">
			<p>label 寬度為動態，字元有可能較長時可調整 <code>col-sm-x</code>，範例請參考欄位直立發展</p>
			<form>
				<h5>欄位水平發展</h5>
                <div class="row">
                    <div class="col-6">
                        <div class="row form-group">
                            <label for="inputEmail3MD" class="col-sm-2 col-form-label text-end">Email 1</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3MD" placeholder="Email" />
                            </div>
                        </div>
                    </div>
					<div class="col-6">
                        <div class="row form-group">
                            <label for="inputEmail4" class="col-sm-2 col-form-label text-end">Email 2</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email" />
                            </div>
                        </div>
                    </div>
                </div>
				<div class="row">
                    <div class="col-6">
                        <div class="row form-group">
                            <label for="inputTest101" class="col-sm-2 col-form-label text-end">測試欄位 1</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTest101" placeholder="placeholder" />
                            </div>
                        </div>
                    </div>
					<div class="col-6">
                        <div class="row form-group">
                            <label for="inputTest102" class="col-sm-2 col-form-label text-end">測試欄位 2</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputTest102" placeholder="placeholder" />
                            </div>
                        </div>
                    </div>
                </div>
				<hr />
				<h5>欄位直立發展</h5>
				<div class="row">
					<div class="col-6">
                        <div class="row form-group">
                            <label for="inputTest103" class="col-sm-3 col-form-label text-end">Email 1</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputTest103" placeholder="Email" />
                            </div>
                        </div>
						<div class="row form-group">
                            <label for="inputTest104" class="col-sm-3 col-form-label text-end">Email 2</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputTest104" placeholder="Email" />
                            </div>
                        </div>
					</div>
					<div class="col-6">
					    <div class="row form-group">
                            <label for="inputTest105" class="col-sm-4 col-form-label text-end">測試欄位 1</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputTest105" placeholder="placeholder" />
                            </div>
                        </div>
						<div class="row form-group">
                            <label for="inputTest106" class="col-sm-4 col-form-label text-end">測試欄位 2</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputTest106" placeholder="placeholder" />
                            </div>
                        </div>
						<div class="row form-group">
                            <label for="inputTest107" class="col-sm-4 col-form-label text-end">測試欄位 3</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputTest107" placeholder="placeholder" />
                            </div>
                        </div>
					</div>
				</div>
                <hr />
                <h5>欄位間距縮減版</h5>
                <p>label 靠左或是靠右</p>
                <div class="col-6">
                    <div class="row mb-1">
                        <label for="inputTest201" class="col-sm-3 col-form-label pb-0">Text</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm" id="inputTest201" placeholder="Text" />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label for="inputTest202" class="col-sm-2 col-form-label pb-0 text-end">Email 2</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" id="inputTest202" placeholder="Text" />
                        </div>
                    </div>
                </div>
			</form>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3><strong>Bootstrap Server side</strong></h3>
                </div>
                <div class="block-content">
                    <form>
                        <div class="row">
                            <div class="col-4 form-group">
                                <label class="form-label" for="validationServer01">First name</label>
                                <input type="text" class="form-control is-valid" id="validationServer01" placeholder="First name" value="Mark" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-4 form-group">
                                <label class="form-label" for="validationServer02">Last name</label>
                                <input type="text" class="form-control is-valid" id="validationServer02" placeholder="Last name" value="Otto" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-4 form-group">
                                <label class="form-label" for="validationServerUsername">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupPrepend3">@</span>
                                    </div>
                                    <input type="text" class="form-control is-invalid" id="validationServerUsername" placeholder="Username" aria-describedby="inputGroupPrepend3" required>
                                    <div class="invalid-feedback">
                                        Please choose a username.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <label class="form-label" for="validationServer03">City</label>
                                <input type="text" class="form-control is-invalid" id="validationServer03" placeholder="City" required>
                                <div class="invalid-feedback">
                                    Please provide a valid city.
                                </div>
                            </div>
                            <div class="col-3 form-group">
                                <label class="form-label" for="validationServer04">State</label>
                                <input type="text" class="form-control is-invalid" id="validationServer04" placeholder="State" required>
                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>
                            </div>
                            <div class="col-3 form-group">
                                <label class="form-label" for="validationServer05">Zip</label>
                                <input type="text" class="form-control is-invalid" id="validationServer05" placeholder="Zip" required>
                                <div class="invalid-feedback">
                                    Please provide a valid zip.
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3" required>
                                <label class="form-check-label" for="invalidCheck3">
                                    Agree to terms and conditions
                                </label>
                                <div class="invalid-feedback">
                                    You must agree before submitting.
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit form</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

