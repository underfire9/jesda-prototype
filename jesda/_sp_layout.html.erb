    <!-- Full page scroll -->
    <script>
        gsap.registerPlugin(ScrollTrigger);
        gsap.registerPlugin(ScrollToPlugin);

        let sections = gsap.utils.toArray(".fullpage-section");

        function goToSection(i) {
            gsap.to(window, {
                scrollTo: { y: i * innerHeight, autoKill: false, ease: "Power3.easeInOut" },
                duration: 0.85,
            });
        }

        function setupFullPageScroll() {
            if (window.innerWidth >= 1200) {
                sections.forEach((eachPanel, i) => {
                    ScrollTrigger.create({
                        trigger: eachPanel,
                        onEnter: () => goToSection(i),
                    });

                    ScrollTrigger.create({
                        trigger: eachPanel,
                        start: "bottom bottom",
                        onEnterBack: () => goToSection(i),
                    });
                });
            } else {
                ScrollTrigger.getAll().forEach(trigger => trigger.kill());
            }
        }

        // Initial setup
        setupFullPageScroll();

        // Re-setup on window resize
        window.addEventListener("resize", () => {
            setupFullPageScroll();
        });
    </script>
    
    <!-- scrollspy -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        gsap.registerPlugin(ScrollTrigger);

        const sections = [
            { panel: '.panel-customized', spy: '.spy-customized' },
            { panel: '.panel-case', spy: '.spy-case' },
            { panel: '.panel-iso', spy: '.spy-iso' }
        ];

        sections.forEach((section) => {
            ScrollTrigger.create({
                trigger: section.panel,
                start: "top center",
                end: "bottom center",
                onEnter: () => {
                    document.querySelector(section.spy).classList.add('active');
                },
                onLeave: () => {
                    document.querySelector(section.spy).classList.remove('active');
                },
                onEnterBack: () => {
                    document.querySelector(section.spy).classList.add('active');
                },
                onLeaveBack: () => {
                    document.querySelector(section.spy).classList.remove('active');
                }
            });
        });

        ScrollTrigger.create({
            trigger: '.panel-dark',
            start: "top center",
            end: "bottom center",
            onEnter: () => document.querySelector('.header').classList.add('header-dark'),
            onLeave: () => document.querySelector('.header').classList.remove('header-dark'),
            onEnterBack: () => document.querySelector('.header').classList.add('header-dark'),
            onLeaveBack: () => document.querySelector('.header').classList.remove('header-dark')
        });

    // 預設隱藏 .header-logo
    const headerLogo = document.querySelector('.header-logo');
    headerLogo.style.opacity = '0';

    // 創建 ScrollTrigger
    ScrollTrigger.create({
        trigger: '.landing-section',
        start: "top top+=1",  // 開始觸發時，進入到 landing-section 就隱藏
        end: "bottom top+=1", // 結束觸發時，離開 landing-section 就顯示
        onEnter: () => gsap.to(headerLogo, {opacity: 0, duration: 0.5}),
        onLeave: () => gsap.to(headerLogo, {opacity: 1, duration: 0.5}),
        onEnterBack: () => gsap.to(headerLogo, {opacity: 0, duration: 0.5}),
        onLeaveBack: () => gsap.to(headerLogo, {opacity: 1, duration: 0.5})
    });

    });
    </script>
    
