<% content_for :js do %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // 取得所有 .textarea-edit 元素
    const textareaEdits = document.querySelectorAll('.textarea-edit');

    textareaEdits.forEach(textareaEdit => {
        // 為每個 .textarea-edit 元素中的按鈕添加點擊事件監聽器
        const btnEdit = textareaEdit.querySelector('.btn-edit');
        const textarea = textareaEdit.querySelector('.editable');

        // 初始狀態為不可編輯
        let isEditable = false;

        btnEdit.addEventListener('click', function() {
            if (!isEditable) {
                // 移除 textarea 的 disabled 和 readonly 屬性
                textarea.disabled = false;
                textarea.readOnly = false;
                // 給按鈕添加 disabled 屬性
                btnEdit.disabled = true;
            } else {
                // 添加 textarea 的 disabled 和 readonly 屬性
                textarea.disabled = true;
                textarea.readOnly = true;
                // 移除按鈕的 disabled 屬性
                btnEdit.disabled = false;
            }
            // 切換狀態
            isEditable = !isEditable;
        });
    });
});

</script>
<% end %>

