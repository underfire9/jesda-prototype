<!-- template: 找專家/找合作 - 入口 (教師介紹) -->

<div class="container-lg">
    <div class="page-content d-block">
        
        <div class="page-title">
            <h2>教師介紹</h2>
        </div>
        
        <div class="narrow-wrapper">
            <ul class="nav nav-tabs mb-5" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="search-general-tab" data-bs-toggle="pill" data-bs-target="#search-general" type="button" role="tab" aria-controls="search-general" aria-selected="true">一般檢索</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="search-advanced-tab" data-bs-toggle="pill" data-bs-target="#search-advanced" type="button" role="tab" aria-controls="search-advanced" aria-selected="false">進階檢索</button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                
                <div class="tab-pane fade show active" id="search-general" role="tabpanel" aria-labelledby="search-general-tab" tabindex="0">
                
                    <div class="mb-4">
                        <input type="text" class="form-control form-control-lg" placeholder="姓名、研究、領域、專長" />
                    </div>
                    
                    <div>
                        <button class="btn btn-primary" type="submit" >查詢</button>
                        <button class="btn btn-light" type="button" >清除</button>
                    </div>
                
                </div>
                
                <div class="tab-pane fade" id="search-advanced" role="tabpanel" aria-labelledby="search-advanced-tab" tabindex="0">
                
                    <div class="condition-wrapper">
                        
                        <div class="condition-item">
                            <div class="item-pices">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>姓名</option>
                                    <option value="1">研發領域</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="item-pices">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>包含</option>
                                    <option value="1">不包含</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="item-pices pices-input">
                                <input type="text" class="form-control">
                            </div>
                            <div class="item-pices">
                                <button type="button" class="btn btn-outline-primary"><i class="fas fa-plus"></i> 插入條件</button>
                            </div>
                        </div>
                        
                        <% (1..2).map do |i| %>
                        <div class="condition-item">
                            <div class="item-pices">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>姓名</option>
                                    <option value="1">研發領域</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="item-pices">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>包含</option>
                                    <option value="1">不包含</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="item-pices pices-input">
                                <input type="text" class="form-control">
                            </div>
                            <div class="item-pices">
                                <button type="button" class="btn btn-outline-primary"><i class="fas fa-plus"></i> 插入條件</button>
                            </div>
                            <div class="item-pices">
                                <button type="button" class="btn btn-outline-danger">刪除</button>
                            </div>
                        </div>
                        <% end %>
                        
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">所有條件使用</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" />
                                <label class="form-check-label" for="inlineRadio1">and</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" />
                                <label class="form-check-label" for="inlineRadio2">or</label>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <button class="btn btn-primary" type="submit" >查詢</button>
                        <button class="btn btn-light" type="button" >清除</button>
                    </div>
                
                </div>
                
            </div>
        </div>
        
    </div>
</div>



<% content_for :js do %>

<% end %>

