                    <div class="col-8">
                        <input type="text" class="form-control" placeholder="號碼">
                    </div>
                </div>
            </div>
		</div>

        <a href="#" class="add-btn">
            <span class="btn btn-sm btn-blue-grey btn-rounded waves-effect waves-light"><i class="fa fa-plus"></i></span>
            <span class="text-black-50">新增推薦人</span>
        </a>

		<div class="form-action">
			<a href="#" class="btn btn-link">上一步</a>
			<a href="#" class="btn btn-default">儲存</a>
			<a href="#" class="btn btn-link">下一步</a>
		</div>
	</form>
</div>

















































