<!-- admin-page: UI / Typography / Color -->
<%= render :partial => "/partials/admin_breadcrumb" %>

<main class="main">
    <div class="page-header">
        <h1>Typography / Color</h1>
        <p>Bootstrap style</p>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Headings <small>Light (normal)</small></h3>
                </div>
                <div class="block-content">
                    <h1>h1. Bootstrap heading</h1>
                    <h2>h2. Bootstrap heading</h2>
                    <h3>h3. Bootstrap heading</h3>
                    <h4>h4. Bootstrap heading</h4>
                    <h5>h5. Bootstrap heading</h5>
                    <h6>h6. Bootstrap heading</h6>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Headings <small>Bold</small></h3>
                </div>
                <div class="block-content">
                    <h1 class="fw-bold">h1. Bootstrap heading</h1>
                    <h2 class="fw-bold">h2. Bootstrap heading</h2>
                    <h3 class="fw-bold">h3. Bootstrap heading</h3>
                    <h4 class="fw-bold">h4. Bootstrap heading</h4>
                    <h5 class="fw-bold">h5. Bootstrap heading</h5>
                    <h6 class="fw-bold">h6. Bootstrap heading</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Labels</h3>
                </div>
                <div class="block-content">
					<p>
                        <span class="badge bg-primary"><i class="fa fa-cog"></i> Settings</span>
                        <span class="badge bg-success"><i class="fa fa-check"></i> Great!</span>
                        <span class="badge bg-info"><i class="fa fa-info-circle"></i> More Info</span>
                        <span class="badge bg-warning"><i class="fa fa-exclamation-circle"></i>  Attention</span>
                        <span class="badge bg-danger"><i class="fa fa-times-circle"></i> Error</span>
                    </p>
					<p>
                        <span class="badge rounded-pill bg-primary">Primary</span>
                        <span class="badge rounded-pill bg-secondary">Secondary</span>
                        <span class="badge rounded-pill bg-success">Success</span>
                        <span class="badge rounded-pill bg-danger">Danger</span>
                        <span class="badge rounded-pill bg-warning text-dark">Warning</span>
                        <span class="badge rounded-pill bg-info">Info</span>
                        <span class="badge rounded-pill bg-light text-dark">Light</span>
                        <span class="badge rounded-pill bg-dark">Dark</span>
					</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Badges</h3>
                </div>
                <div class="block-content">
                    <p>
                        <h1>This is the first heading <span class="badge red">New</span></h1>
                        <button type="button" class="btn btn-primary">
                            Notifications <span class="badge text-bg-light">4</span>
                        </button>
                        <a href="#">Messages <span class="badge text-bg-secondary">3</span></a>
                    </p>
                    <p>
                        <span class="badge bg-secondary"><i class="fa fa-home"></i> 100</span>
                        <span class="badge bg-secondary"><i class="fa fa-cog"></i> 1250</span>
                        <span class="badge bg-secondary"><i class="fa fa-check"></i> 6320</span>
                        <span class="badge bg-secondary"><i class="fa fa-info-circle"></i> 250</span>
                        <span class="badge bg-secondary"><i class="fa fa-exclamation-circle"></i>  151</span>
                        <span class="badge bg-secondary"><i class="fa fa-times-circle"></i> 630</span>
                    </p>
                    <p>
                        <span class="badge rounded-pill bg-dark"><i class="fa fa-home"></i> 100</span>
						<span class="badge rounded-pill bg-light text-dark"><i class="fa fa-home"></i> 100</span>
                        <span class="badge rounded-pill bg-primary"><i class="fa fa-cog"></i> 1250</span>
                        <span class="badge rounded-pill bg-success"><i class="fa fa-check"></i> 6320</span>
                        <span class="badge rounded-pill bg-info"><i class="fa fa-info-circle"></i> 250</span>
                        <span class="badge rounded-pill bg-warning"><i class="fa fa-exclamation-circle"></i>  151</span>
                        <span class="badge rounded-pill bg-danger"><i class="fa fa-times-circle"></i> 630</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Links</h3>
                </div>
                <div class="block-content">
                    <div class="row">
                        <div class="col"><a href="/">Default link</a></div>
                        <div class="col"><a href="/" class="btn btn-primary">btn link</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">        
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Contextual Colors</h3>
                </div>
                <div class="block-content">
                    <p class="text-primary">.text-primary</p>
                    <p class="text-secondary">.text-secondary</p>
                    <p class="text-success">.text-success</p>
                    <p class="text-danger">.text-danger</p>
                    <p class="text-warning bg-dark">.text-warning</p>
                    <p class="text-info bg-dark">.text-info</p>
                    <p class="text-light bg-dark">.text-light</p>
                    <p class="text-dark">.text-dark</p>
                    <p class="text-body">.text-body</p>
                    <p class="text-muted">.text-muted</p>
                    <p class="text-white bg-dark">.text-white</p>
                    <p class="text-black-50">.text-black-50</p>
                    <p class="text-white-50 bg-dark">.text-white-50</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Contextual Backgrounds</h3>
                </div>
                <div class="block-content">
                    <div class="p-3 mb-2 bg-primary bg-gradient text-white">.bg-primary.bg-gradient</div>
                    <div class="p-3 mb-2 bg-secondary bg-gradient text-white">.bg-secondary.bg-gradient</div>
                    <div class="p-3 mb-2 bg-success bg-gradient text-white">.bg-success.bg-gradient</div>
                    <div class="p-3 mb-2 bg-danger bg-gradient text-white">.bg-danger.bg-gradient</div>
                    <div class="p-3 mb-2 bg-warning bg-gradient text-dark">.bg-warning.bg-gradient</div>
                    <div class="p-3 mb-2 bg-info bg-gradient text-dark">.bg-info.bg-gradient</div>
                    <div class="p-3 mb-2 bg-light bg-gradient text-dark">.bg-light.bg-gradient</div>
                    <div class="p-3 mb-2 bg-dark bg-gradient text-white">.bg-dark.bg-gradient</div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="col-block">
                <div class="block-header has-border">
                    <h3 class="block-title">Highlight</h3>
                </div>
                <div class="block-content">
                    <div class="row">
                        <p>You can use the mark tag to <mark>highlight</mark> text.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
		<div class="col-3">
			<div class="bg-primary shadow-2 text-white px-5 py-5 text-center">.bg-primary</div>
		</div>
		<div class="col-3">
			<div class="bg-secondary shadow-2 text-white px-5 py-5 text-center">.bg-secondary</div>
		</div>
		<div class="col-3">
			<div class="bg-success shadow-2 text-white px-5 py-5 text-center">.bg-success</div>
		</div>
		<div class="col-3">
			<div class="bg-danger shadow-2 text-white px-5 py-5 text-center">.bg-danger</div>
		</div>
		<div class="col-3">
			<div class="bg-warning shadow-2 text-white px-5 py-5 text-center">.bg-warning</div>
		</div>
		<div class="col-3">
			<div class="bg-info shadow-2 text-white px-5 py-5 text-center">.bg-info</div>
		</div>
		<div class="col-3">
			<div class="bg-light shadow-5 px-5 py-5 text-center">.bg-light</div>
		</div>
		<div class="col-3">
			<div class="bg-dark shadow-2 text-white px-5 py-5 text-center">.bg-dark</div>
		</div>
		<div class="col-3">
			<div class="bg-white shadow-2 px-5 py-5 text-center">.bg-white</div>
		</div>
		<div class="col-3">
			<div class="bg-transparent px-5 py-5 text-center">.bg-transparent</div>
		</div>
	</div>

    <div class="row">
        <div class="col-block">
            <div class="block-header">
                <h3 class="block-title">List</h3>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="block-content">
                        <h3 class="push">Unordered List</h3>
                        <ul>
                            <li><%= lorem_sentence %></li>
                            <li><%= lorem_sentence %></li>
                            <li>
                                Sublist
                                <ul>
                                    <li>First subitem</li>
                                    <li>Second subitem</li>
                                    <li>Third subitem</li>
                                </ul>
                            </li>
                            <li><%= lorem_sentence %></li>
                        </ul>
                    </div>
                </div>
                <div class="col-3">
                    <div class="block-content">
                        <h3 class="push">Ordered List</h3>
                        <ol>
                            <li><%= lorem_sentence %></li>
                            <li><%= lorem_sentence %></li>
                            <li>
                                Sublist
                                <ol>
                                    <li>First subitem</li>
                                    <li>Second subitem</li>
                                    <li>Third subitem</li>
                                </ol>
                            </li>
                            <li><%= lorem_sentence %></li>
                        </ol>
                    </div>
                </div>
                <div class="col-3">
                    <div class="block-content">
                        <h3 class="push">Icon List</h3>
                        <ul class="fa-ul">
                            <li><i class="fa fa-check fa-li"></i> <%= lorem_sentence %></li>
                            <li><i class="fa fa-check fa-li"></i> <%= lorem_sentence %></li>
                            <li>
                                Sublist
                                <ul class="fa-ul">
                                    <li><i class="fa fa-angle-right fa-li"></i> First subitem</li>
                                    <li><i class="fa fa-angle-right fa-li"></i> Second subitem</li>
                                    <li><i class="fa fa-angle-right fa-li"></i> Third subitem</li>
                                </ul>
                            </li>
                            <li><i class="fa fa-check fa-li"></i> <%= lorem_sentence %></li>
                        </ul>
                    </div>
                </div>
                <div class="col-3">
                    <div class="block-content">
                        <h3 class="push">Unstyled List</h3>
                        <ul class="fa-ul">
                            <li><%= lorem_sentence %></li>
                            <li><%= lorem_sentence %></li>
                            <li>
                                Sublist
                                <ul>
                                    <li>First subitem</li>
                                    <li>Second subitem</li>
                                    <li>Third subitem</li>
                                </ul>
                            </li>
                            <li><%= lorem_sentence %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>