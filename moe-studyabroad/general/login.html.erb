<!-- template: 選送學生登入 -->

<div class="container-lg">
	<div class="login-wrapper">
		<div class="login-card" id="maincontent">
		    <div class="card-hd">
			    <h3>選送學生登入</h3>
			</div>
			<div class="card-bd">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="form-label">年度</label>
                            <div>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>112</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="form-label">計畫</label>
                            <div>
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>請選擇計畫</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">學校</label>
                    <div>
                        <select class="form-select" id="single-select-field" data-placeholder="請選擇學校">
                            <option></option>
                            <option>Reactive</option>
                            <option>Solution</option>
                            <option>Conglomeration</option>
                            <option>Algoritm</option>
                            <option>Holistic</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="loginlInput2" class="form-label">帳號</label>
                    <input type="text" class="form-control" id="loginlInput2" placeholder="請輸入帳號" />
                </div>
                <div class="form-group">
                    <label for="loginInput4" class="form-label">驗證碼</label>
                    <div class="d-flex align-items-center">
                        <span class="me-1"><input type="text" class="form-control" id="loginInput4" /></span>
                        <span class="me-1"><img class="captcha" src="http://nfu-map.dev.com.tw/common/captcha.image" /></span>
                        <span class="me-1">
                            <button type="button" class="btn btn-xs btn-outline-dark" title="播放語音驗證碼"><i class="fa fa-volume-up"></i><span class="sr-only">播放語音驗證碼</span></button>
                        </span>
                        <span>
                            <button class="btn btn-xs btn-outline-dark" type="button" title="更新驗證碼"><i class="fas fa-sync-alt"></i></button>
                        </span>
                    </div>
                </div>
			</div>
            <div class="d-grid mt-4">
                <button class="btn btn-lg btn-primary" type="submit">登入</button>
                <span class="d-block text-center mt-3">帳號請洽學校承辦人</span>
            </div>
		</div>
	</div>
</div>



<% content_for :js do %>
    <script src="../javascripts/select2.full.min.js"></script>
    <script>
        $("#single-select-field").select2({
            theme: "bootstrap-5",
            width: $(this).data("width") ? $(this).data("width") : $(this).hasClass("w-100") ? "100%" : "style",
            placeholder: $(this).data("placeholder"),
        });
    </script>
<% end %>

