<div class="container">
	<h4 class="block-title">2019 秋季班 赴本校交換生提名作業</h4>
	<div class="leading-principles d-flex justify-content-between">
	    <span class="item">Contract level：<strong>School</strong></span>
		<span class="item">School contracted：<strong>Global office</strong></span>
		<span class="item">Date：<strong>2018/8/2</strong></span>
		<span class="item">Quota ：<strong>4</strong></span>
	</div>
	<div class="btn-group btn-group-sm unshadow mb-2">
		<a class="btn btn-white" role="button" data-toggle="modal" data-target="#basicExampleModal">新增提名學生</a>
		<a class="btn btn-white" role="button">名單匯入</a>
		<a class="btn btn-white" role="button">匯入範本下載</a>
		<a class="btn btn-white" role="button">送出提名通知</a>
	</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th><input type="checkbox" class="defaultstyle"></th>
				<th>English name</th>
				<th>Gender</th>
				<th>Email</th>
				<th class="text-center">Department</th>
				<th class="text-center">Grade</th>
				<th>Period</th>
				<th class="text-center">Nomination time</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><button class="btn btn-xs btn-info" data-toggle="modal" data-target="#basicExampleModal">Edit</button></td>
				<td class="text-center">1</td>
				<td><input type="checkbox" class="defaultstyle"></td>
				<td><%= lorem_words(2) %></td>
				<td>男</td>
				<td><%= lorem_email %></td>
				<td>資工系</td>
				<td class="text-center">2</td>
				<td>一學期</td>
				<td class="text-center">03/17 18:00</td>
				<td>
					
					<button class="btn btn-xs btn-link"><i class="fa fa-times"></i> Delete</button>
				</td>
			</tr>
			<% 5.times do %>
			<tr>
				<td><button class="btn btn-xs btn-info" data-toggle="modal" data-target="#basicExampleModal">Edit</button></td>
				<td class="text-center">2</td>
				<td><input type="checkbox" class="defaultstyle"></td>
				<td><%= lorem_words(2) %></td>
				<td>男</td>
				<td><%= lorem_email %></td>
				<td>資工系</td>
				<td class="text-center">2</td>
				<td>一學期</td>
				<td class="text-center">03/17 18:00</td>
