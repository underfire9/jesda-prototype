<!-- template: 企業列表 -->

<%= render :partial => "/partials/breadcrumb" %>

<div class="page-content" id="maincontent">
    <div class="container-xl">
        <div class="section-title">
            <h3>企業簡介<i></i><i></i></h3>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="請輸入關鍵字" aria-label="Recipient's username" aria-describedby="button-addon2" />
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                    <i class="fas fa-search"></i>
                    <span class="sr-only">搜尋</span>
                </button>
            </div>
        </div>
        <div class="partner-list-wrapper">
            <ul class="partner-list menu-item">
                <li class="partner-item">
                    <a href="#" title="台積電">
                        <span class="logo-wrap">
                            <img class="partner-logo" src="../assets/partner/tsmc.png" alt="台積電">
                        </span>
                        <div class="ft">
                            <span class="ch">台積電</span>
                            <span class="en">TSMC</span>
                        </div>
                    </a>
                </li>
                <li class="partner-item">
                    <a href="#" title="{連結名稱}">
                        <span class="logo-wrap">
                            <img class="partner-logo" src="../assets/partner/micron.png" alt="美光科技">
                        </span>
                        <div class="ft">
                            <span class="ch">美光科技</span>
                            <span class="en">Micron Technology</span>
                        </div>
                    </a>
                </li>
                <li class="partner-item">
                    <a href="#" title="{連結名稱}">
                        <span class="logo-wrap">
                            <img class="partner-logo" src="../assets/partner/db_schenker.png" alt="德鐵信可">
                        </span>
                        <div class="ft">
                            <span class="ch">德鐵信可</span>
                            <span class="en">DB Schenker</span>
                        </div>
                    </a>
                </li>
                <li class="partner-item">
                    <a href="#" title="{連結名稱}">
                        <span class="logo-wrap">
                            <img class="partner-logo" src="../assets/partner/pfizer.png" alt="輝瑞大藥廠">
                        </span>
                        <div class="ft">
                            <span class="ch">美商宏智國際顧問有限公司</span>
                            <span class="en">Advanced Genomics APAC</span>
                        </div>
                    </a>
                </li>
                <% (1..40).map do |i| %>
                <li class="partner-item">
                    <a href="#" title="{連結名稱}">
                        <span class="logo-wrap">
                            <img class="partner-logo" src="../assets/partner/pfizer.png" alt="輝瑞大藥廠">
                        </span>
                        <div class="ft">
                            <span class="ch">輝瑞大藥廠</span>
                            <span class="en">Pfizer Taiwan</span>
                        </div>
                    </a>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>

<% content_for :js do %>
<script src="../javascripts/gsap.min.js"></script>
<script src="../javascripts/ScrollTrigger.min.js"></script>
<script>
gsap.registerPlugin(ScrollTrigger);

// 所有的 .partner-item
const items = document.querySelectorAll('.partner-item');

// 設定 ScrollTrigger
items.forEach((item, index) => {
    gsap.from(item, {
        opacity: 0,
        y: 50,
        scrollTrigger: {
            trigger: item,
            start: 'top bottom', // 觸發的位置
            toggleActions: 'play pause resume pause', // 播放和返回時的動作
        },
        delay: index * 0.03,
    });
});
</script>
<% end %>

