<!-- admin-page: UI / Profile 1 (have photo) -->
<%= render :partial => "/partials/admin_breadcrumb" %>

<main class="main">
    <div class="page-header">
        <h2>Page Title</h2>
    </div>
	<div class="clearfix">
        <div class="profile-sidebar">
            <div class="col-block">
                <div class="block-content expansion">
                    <div class="profile-avatar">
                        <img class="avatar" src="../assets/default.png" alt="avatar" />
