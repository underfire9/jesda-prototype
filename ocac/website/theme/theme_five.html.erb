<!-- event-page: Theme Five -->

<% content_for :css do %>
    <link rel="stylesheet" media="screen" href="../stylesheets/theme_five.css">
<% end %>

<body>
    <div class="page">
        <div class="page-wrapper">
			
            <header class="header">
                <div class="container">
                    <div class="header-inner">
                        <h1 class="h1-logo">
                            <a href="#" class="logo-link" title="僑務活動報名系統">
                                <img src="../assets/logo@2x.png" alt="僑委會徽章">
                                <div class="logo-text">
                                    <span class="cht">僑務活動報名系統</span>
                                    <span class="en">Overseas Community Affairs Council, Republic of China (Taiwan)</span>
                                </div>
                            </a>
                        </h1>
                        <div class="top-link">
                            <a href="#" title="快速連結區" accesskey="U">:::</a>
                            <a href="#" title="回首頁">回首頁</a>
                            <div class="language">
                                <select class="browser-default custom-select">
                                    <option selected>繁體中文</option>
                                    <option value="englisg">English</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
			
            <div class="content-wrapper">
                <div class="block-wrapper">
                    <div class="container">
                        <div class="main-hd">
                            <hgroup>
                                <h2 class="event-title">2020年僑務委員會海外商會幹部暨青商培訓班</h2>
                                <h4 class="event-title-sm">2020 Overseas Chamber of Commerce Cadre and Youth Business Training Program</h4>
                            </hgroup>
                            <div class="share">
                                <a href="#" title="分享到 Facebook"><img src="../assets/icon-fb@2x.png" alt="Facebook" /></a>
                                <a href="#" title="分享到 Line"><img src="../assets/icon-line@2x.png" alt="Line" /></a>
                            </div>
                        </div>

                        <!-- 當只有一張 banner 沒有輪播時，請將 .carousel-indicators .carousel-control-x 隱藏 -->
                        <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                                <li data-target="#carousel-example-1z" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <!-- 系統預設 banner -->
                                    <img class="d-block w-100" src="../assets/banner/default-five.jpg" alt="Theme one" />
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="../assets/fake/10.jpg" alt="Fake One" />
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="../assets/fake/11.jpg" alt="Fake Two" />
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev" title="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next" title="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
				
				<div class="block-wrapper">
					<div class="container">
                        <div class="announcement-wrapper">
                            <div class="announcement-hd">
                                <h3 class="announcement-title">公告</h3>
                                <a href="#" class="more" data-toggle="modal" data-target="#basicExampleModal" title="更多公告">more <i class="fa fa-arrow-right"></i></a>
                            </div>
                            <div class="announcement-bd">
                                <!-- 點擊單筆資料開啟 dialog 時需捲動至該筆資料位置，並在容器加上 classname .item-focus，如有問題請找 peggy 進行協助 -->
                                <ul class="menu-item">
                                    <li><a href="#" data-toggle="modal" data-target="#basicExampleModal" title="公告標題">因應「新型冠狀病毒」本土疫情嚴峻並配合中央防疫政策</a></li>
                                    <li><a href="#" data-toggle="modal" data-target="#basicExampleModal" title="公告標題"><%= lorem_sentences(3) %></a></li>
                                </ul>
                            </div>
                        </div>
						
						<div class="info-wrapper">
						    <div class="widget-block widget-date">
								<div class="widget-hd">
								    <h3 class="block-title">活動日期</h3>
								</div>
								<div class="widget-bd">
									<div class="event-date">
									    <i class="fa fa-calendar"></i>
										<span class="datetime">2021/07/20 14:00(+0800) ~ </span>
										<span class="datetime">2021/10/21 01:00(+0800)</span>
									</div>
								</div>
							</div>
							
							<div class="widget-block widget-contact">
								<div class="widget-hd">
								    <h3 class="block-title">聯絡主辦單位</h3>
								</div>
								<div class="widget-bd">
								    <ul class="menu-item contact-menu">
									    <li>
											<i class="fa fa-user-circle"></i>
											<span>Scarlett Johansson</span>
										</li>
										<li>
											<i class="fa fa-envelope"></i>
											<a href="mailto:johansson@ocac.gov.tw" title="johansson@ocac.gov.tw">johansson@ocac.gov.tw</a>
										</li>
										<li>
											<i class="fa fa-phone"></i>
											<span>886-2-2327-2600</span>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
				 
                <div class="main-wrapper">
					<div class="container">
                        <main class="main">
                            <div class="widget-block">
                                <div class="video-container">
                                    <iframe src="https://www.youtube.com/embed/1S0CTtY8Qa0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            </div>
                            <h3 class="block-title">活動介紹</h3>
                            <div class="event-intro">
                                <p><%= lorem_paragraphs(2) %></p>
                                <h4>H4 Title</h4>
                                <p><%= lorem_paragraphs(2) %></p>
                                <ol>
                                    <li><%= lorem_sentence %></li>
                                    <li><%= lorem_sentence %></li>
                                    <li><%= lorem_sentence %></li>
                                </ol>
                                <h5>H5 Title</h5>
                                <p><%= lorem_paragraphs(2) %></p>
                            </div>
                        </main>
					</div>
                </div>
				
				<div class="block-wrapper">
					<div class="container">
                        <div class="widget-wrapper">
							<div class="widget-block">
								<div class="widget-hd">
								    <h3 class="block-title">常見問題</h3>
									<a href="#" data-toggle="modal" data-target="#basicExampleModal"  class="more" title="更多問題">more <i class="fa fa-arrow-right"></i></a>
								</div>
								<div class="widget-bd">
                                    <ul class="menu-item qa-list">
                                        <li><a href="#" data-toggle="modal" data-target="#basicExampleModal" title="問答標題"><%= lorem_sentence %></a></li>
                                        <li><a href="#" data-toggle="modal" data-target="#basicExampleModal" title="問答標題">僑生學籍系統資料應如何申請更正？（包括中文姓名、出生日期等）</a></li>
                                    </ul>

								</div>
							</div>
                            <div class="widget-block">
                                <div class="widget-hd">
                                    <h3 class="block-title">相關連結</h3>
                                </div>
                                <div class="widget-bd">
                                    <ul class="menu-item links-list">
                                        <li><a href="#" title="連結名稱"><%= lorem_words(5) %></a></li>
                                        <li><a href="#" title="連結名稱">連結名稱</a></li>
                                        <li><a href="#" title="連結名稱"><%= lorem_words(4) %></a></li>
                                        <li><a href="#" title="連結名稱"><%= lorem_words(3) %></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="widget-block">
                                <div class="widget-hd">
                                    <h3 class="block-title">檔案下載</h3>
                                </div>
                                <div class="widget-bd">
                                    <ul class="menu-item file-list">
                                        <li><a href="#" title="檔案名稱"><%= lorem_words(6) %></a></li>
                                        <li><a href="#" title="檔案名稱">海外青年技術訓練班作業須知</a></li>
                                        <li><a href="#" title="檔案名稱"><%= lorem_words(5) %></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="map-container">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.758053361775!2d121.51736311597595!3d25.04228364411119!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442a9740750a077%3A0x3a165c00c59ba44!2z5YOR5YuZ5aeU5ZOh5pyD!5e0!3m2!1szh-TW!2stw!4v1624330861517!5m2!1szh-TW!2stw" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
					</div>
				</div>
				
				<div class="container">
					<div class="submit-block">
					    <a href="#" class="btn btn-lg btn-primary btn-block" title="報名活動">報名活動</a>
						<p class="text-disabled">2021/08/08 開放報名</p>
					</div>
					<!--div class="submit-block">
					    <a href="#" class="btn btn-lg btn-default btn-block disabled" title="報名活動">報名活動</a>
						<p class="text-disabled">2021/08/08 開始報名</p>
					</div-->
				</div>
            </div>
			
        </div>
		
        <footer class="footer">
            <div class="container">
                <div class="footer-inner">
                    <div class="browser-support">
                        瀏覽器建議 
						<a href="https://accessibility.ncc.gov.tw/" title="Google Chrome" target="_blank">Chrome</a>、
						<a href="https://www.mozilla.org/firefox" title="Mozilla Firefox" target="_blank">Mozilla Firefox</a>、
						<a href="https://www.microsoft.com/edge" title="Microsoft Edge" target="_blank">IE11+</a>
                    </div>
                    <a href="https://accessibility.ncc.gov.tw/" title="無障礙網站(開新視窗)" class="accessibility" target="_blank">
                        <img src="../assets/Freego20A.jpg" alt="網站無障礙規範2.0版A級標章">
                    </a>
                </div>
            </div>
        </footer>
    </div>
    
	<%= render :partial => "/partials/theme_qa" %>
	
    <script src="../javascripts/jquery-3.4.1.min.js"></script>
    <script src="../javascripts/popper.min.js"></script>
    <script src="../javascripts/bootstrap.min.js"></script>
    <script src="../javascripts/mdb.min.js"></script>
</body>
