<% content_for :js do %>

<!-- 面試預約區塊逐步顯示 -->
<script>
    // 預設只顯示 interview-s1
    document.querySelector('.interview-s1').style.display = 'block';

    // 監聽 interview-s1 內的 select 變化
    document.querySelector('.interview-s1 select.form-select').addEventListener('change', function() {
      // 如果選擇了某個選項
      if (this.value !== '') {
        // 顯示 interview-s2
        document.querySelector('.interview-s2').style.display = 'block';
        // 滾動到 interview-s2
        document.querySelector('.interview-s2').scrollIntoView({ behavior: 'smooth' });
      }
    });

    // 監聽 interview-s2 內的 radiobox 變化
    const radioboxes = document.querySelectorAll('.interview-s2 .form-check-input');
    radioboxes.forEach(function(radiobox) {
      radiobox.addEventListener('change', function() {
        // 如果有選擇
        if (this.checked) {
          // 顯示 interview-s3
          document.querySelector('.interview-s3').style.display = 'block';
          // 滾動到 interview-s3
          document.querySelector('.interview-s3').scrollIntoView({ behavior: 'smooth' });
        }
      });
    });

    // 監聽 interview-s3 內的 select 變化
    document.querySelector('.interview-s3 select.form-select').addEventListener('change', function() {
      // 如果選擇了某個選項
      if (this.value !== '') {
        // 顯示 interview-s4
        document.querySelector('.interview-s4').style.display = 'block';
        // 滾動到 interview-s4
        document.querySelector('.interview-s4').scrollIntoView({ behavior: 'smooth' });
      }
    });
</script>

<!-- 預約按鈕 -->
<script>
    const reserveBtn = document.querySelector('.btn-reserve');
    const cancelBtn = document.querySelector('.btn-cancel-reserve');

    // 預設情況下隱藏取消按鈕
    cancelBtn.style.display = 'none';

    reserveBtn.addEventListener('click', function() {
      // 顯示取消按鈕
      cancelBtn.style.display = 'inline-block';
      // 禁用預約按鈕
      reserveBtn.disabled = true;
    });

    cancelBtn.addEventListener('click', function() {
      // 隱藏取消按鈕
      cancelBtn.style.display = 'none';
      // 啟用預約按鈕
      reserveBtn.disabled = false;
    });
</script>
<% end %>
