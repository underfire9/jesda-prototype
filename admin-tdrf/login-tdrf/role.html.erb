<!-- admin-page: 藥害救濟基金會 - 選擇角色 -->

<% content_for :replace_css do %>
    <link rel="stylesheet" media="screen" href="../stylesheets/vendor/bootstrap/bootstrap.css">
    <link rel="stylesheet" media="screen, projection, print" href="../stylesheets/mdb.css">
    <link rel="stylesheet" media="screen, projection, print" href="../stylesheets/backend.css">
<% end %>

<div class="login-innerbg"></div>
<div class="login-innerbg login-bg2"></div>
<div class="login-innerbg login-bg3"></div>
<div class="tdrf_switch-container">
    <h1 class="tdrf_logo"><img class="logo__img" src="../assets/logo@2x.png" alt="TDRF Logo" title="藥害救濟基金會" /></h1>
    <ul class="role-list menu-item">
		<li>
            <div class="role-inner">
                <h5 class="item-title">資料登錄人員</h5>
                <p class="item-description">案件資料登錄及管理但不可登錄登錄案件資訊(審議後) 資料</p>
                <a href="#" class="btn btn-main btn-rounded">前往</a>
            </div>
        </li>
		<li>
            <div class="role-inner">
                <h5 class="item-title">案件統計建檔人員</h5>
                <p class="item-description">除登錄及維護案件各項資料外可進行登錄案件資訊(審議後) 資料</p>
                <a href="#" class="btn btn-main btn-rounded">前往</a>
            </div>
        </li>
		<li>
            <div class="role-inner">
                <h5 class="item-title">案件查閱人員</h5>
                <p class="item-description">案件資料查詢</p>
                <a href="#" class="btn btn-main btn-rounded">前往</a>
            </div>
        </li>
		<li>
            <div class="role-inner">
                <h5 class="item-title">管理者</h5>
                <p class="item-description">最大權限</p>
                <a href="#" class="btn btn-main btn-rounded">前往</a>
            </div>
        </li>
    </ul>
</div>

