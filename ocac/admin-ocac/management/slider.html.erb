<!-- admin-page: 網站管理 - 圖片輪播 -->
<%= render :partial => "/partials/admin_breadcrumb" %>

<main class="main">
    <div class="page-header">
		<h2>圖片輪播</h2>
        <p>管理首頁圖片輪播的各張圖片及說明文字</p>
    </div>
    <div class="management-wrapper">
        <div class="management-bar">
			<button type="button" class="btn btn-md btn-outline-default btn-rounded unshadow waves-effect">新增輪播</button>
            <div class="ml-auto">
                <div class="language-btn-group d-inline-block">
                    <span class="text-preview">語系</span>
                    <div class="btn-group btn-group-sm btn-flex-group unshadow">
                        <a href="#" class="btn btn-default current">中文</a>
                        <a href="#" class="btn btn-default">英文</a>
                        <a href="#" class="btn btn-default">日文</a>
                    </div>
                </div>
            </div>
        </div>
		<div class="management-slider">
		    <div class="slider-item">
			    <div class="slider-sort">
				    <button type="button" class="btn btn-link"><i class="fa fa-long-arrow-up"></i></button>
					<button type="button" class="btn btn-link"><i class="fa fa-long-arrow-down"></i></button>
				</div>
				<div class="slider-image">
					<div class="image-wrap">
                        <img style="width: auto;height: 176px;" title="" src="http://placekitten.com/1110/400" alt="test">
					</div>
				</div>
				<div class="img-introduction">
				    <div class="form-group">
                        <label for="imgIntroduction">說明文案</label>
                        <input type="text" class="form-control" id="imgIntroduction">
                    </div>
					<div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
                            <label class="custom-control-label" for="defaultUnchecked">啟用</label>
                        </div>
                    </div>
					<div class="action">
					    <button type="button" class="btn btn-md btn-info">編輯</button>
						<button type="button" class="btn btn-md btn-danger">刪除</button>
					</div>
				</div>
			</div>
			
			<div class="slider-item">
			    <div class="slider-sort">
				    <button type="button" class="btn btn-link"><i class="fa fa-long-arrow-up"></i></button>
